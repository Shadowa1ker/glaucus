export GLAD=/home/glaucus &&

export CERD=$GLAD/cerata &&
export SCRD=$GLAD/scripts &&
export SRCD=$GLAD/sources &&

export TLOG=$GLAD/logs/toolchain &&
export TSCR=$GLAD/scripts/toolchain &&
export TTMP=$GLAD/temporary/toolchain &&
export TSRC=$TTMP/sources &&

export GLAT=$GLAD/toolchain &&
export TOOL=/toolchain &&

export CCCH=/usr/lib64/ccache &&

export PATH=$TOOL/bin/ccache:$TOOL/bin:$CCCH:/usr/bin:/usr/bin/core_perl &&

export LN='/usr/bin/ln -fsv' &&
export MAKE="/usr/bin/make \
V=1" &&
export MKDIR='/usr/bin/install -dv' &&
export RM='/usr/bin/rm -frv' &&
export RSYNC='/usr/bin/rsync -vaHAXSx' &&

export MAKEFLAGS=-j1 &&

. $SCRD/genome &&

export SPCS=$(readlink $SCRD/species | sed s/flags.//)
