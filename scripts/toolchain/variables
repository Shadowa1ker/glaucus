# The system wide symlink to the toolchain
export TOOL=/toolchain

# $TOOL should be searched first
export PATH=$TOOL/bin:$PATH

# Toolchain-only related variables, these will only be called when constructing
# the toolchain
export TLOG=$LOGD/toolchain
export TBLD=$TMPD/toolchain/builds
export TSRC=$TMPD/toolchain/sources

# Variables pointing to executables are sorted alphabetically
# Also, notice how AR, NM and RANLIB here aren't using LTO (the -gcc- wrappers)
export AR=$TUPL-ar
export AS=$TUPL-as

# The basic four all pointing to the sysroot of the cross-compilation toolchain
# the sysroot here should be honored and should remove the need for
# explicitly specifying sysroot whenever compiling a ceras
export CC="$TUPL-gcc --sysroot=$TOOL/$TUPL"
export CPP="$TUPL-gcc --sysroot=$TOOL/$TUPL -E"
export CXX="$TUPL-g++ --sysroot=$TOOL/$TUPL"
export LD="$TUPL-ld --sysroot=$TOOL/$TUPL"

export NM=$TUPL-nm
export OBJCOPY=$TUPL-objcopy
export OBJDUMP=$TUPL-objdump
export RANLIB=$TUPL-ranlib
export READELF=$TUPL-readelf
export SIZE=$TUPL-size
export STRINGS=$TUPL-strings
export STRIP="$TUPL-strip -sv"
