construct() {
  for ceras in $@; do
    . $CERD/$ceras/ceras/ceras
    . $CERD/$name/ceras/native.ceras
    
    prepare_native || { echo native $name prepare failed; exit $?; }
    configure_native || { echo native $name configure failed; exit $?; }
    build_native || { echo native $name build failed; exit $?; }
    install_native || { echo native $name install failed; exit $?; }
  done
}

construct linux-headers
construct musl
construct libstdc++-v3
construct binutils
construct gmp mpfr mpc isl
construct gcc
