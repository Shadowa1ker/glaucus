construct() {
  for ceras in $@; do
    . $CERD/$ceras/ceras
    . $CERD/$nom/native.ceras
    
    prepare_native || { printf native $nom prepare failed; exit $?; }
    configure_native || { printf native $nom configure failed; exit $?; }
    build_native || { printf native $nom build failed; exit $?; }
    install_native || { printf native $nom install failed; exit $?; }
  done
}

construct linux-headers
construct musl
construct libstdc++-v3
construct binutils
construct gcc
