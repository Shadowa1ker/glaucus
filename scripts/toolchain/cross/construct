construct() {
  for ceras in $@; do
    . $CERD/$ceras/ceras
    . $CERD/$nom/cross.ceras
    
    prepare_cross || { echo cross $nom prepare failed; exit $?; }
    configure_cross || { echo cross $nom configure failed; exit $?; }
    build_cross || { echo cross $nom build failed; exit $?; }
    install_cross || { echo cross $nom install failed; exit $?; }
  done
}

construct binutils
construct gcc
