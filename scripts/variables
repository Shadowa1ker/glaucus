assign_basic_variables(){
        export ARCH=x86_64
        export TRPL=$ARCH-linux-musl
        export CERD=/home/glaucus/cerata
        export TMPD=/home/glaucus/temporary
        export TBLD=$TMPD/toolchain/builds
        export TSRC=$TMPD/toolchain/sources
        export PRFX=/home/glaucus/toolchain
        export PATH=$PRFX/bin:/usr/bin
        export MAKEFLAGS=-j1
}
assign_system_variables(){
        export GLAD=/home/glaucus/system
        export SBLD=$TMPD/system/builds
        export SCER=$TMPD/system/cerata
        export SSRC=$TMPD/system/sources
        export AR=$TRPL-ar
        export AS=$TRPL-as
        export AWK=$GLAD/bin/mawk
        export CC=$TRPL-gcc
        export CFLAGS='-Os -s -fomit-frame-pointer -pipe'
        export CROSS_COMPILE=$TRPL-
        export CXX=$TRPL-g++
        export CXXFLAGS="$CFLAGS"
        export DESTDIR=$GLAD
        export LD=$TRPL-ld
        export LDFLAGS='-Wl,--strip-all -Wl,--as-needed -Wl,--hash-style=gnu'
        export NM=$TRPL-nm
        export OBJDUMP=$TRPL-objdump
        export RANLIB=$TRPL-ranlib
        export READELF=$TRPL-readelf
        export STRIP=$TRPL-strip
        export YACC=$GLAD/bin/yacc
}
