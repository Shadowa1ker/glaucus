construct() {
  . $CERD/$1/ceras &&
  . $CERD/$nom/system.ceras &&
  
  prepare_system || $SCRD/exit system $nom prepare $? || exit &&
  configure_system || $SCRD/exit system $nom configure $? || exit &&
  build_system || $SCRD/exit system $nom build $? || exit &&
  install_system || $SCRD/exit system $nom install $? || exit
}

construct linux-headers &&
construct musl
