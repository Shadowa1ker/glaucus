rsync -vah /backup/chroot/ $TOOL --delete

rm -frv $SBLD $SCER /boot /etc /usr /var
install -dv $SBLD $SCER /boot /etc /usr/bin /usr/cerata /usr/include /usr/lib \
  /usr/share /var /var/lib /var/lib/urandom /var/log
install -dvm 0750 /root
install -dvm 1777 /tmp

ln -fsv $TOOL/lib/libgcc_s.so $TOOL/lib/libgcc_s.so.1 /usr/lib
ln -fsv $TOOL/lib/libstdc++.so $TOOL/lib/libstdc++.so.6 /usr/lib

ln -fsv $TOOL/lib/libcrypto.so /usr/lib
ln -fsv $TOOL/lib/libgomp.so /usr/lib
ln -fsv $TOOL/lib/libgomp.spec /usr/lib

strip -sv $TOOL/lib/libgcc_s.so.1
