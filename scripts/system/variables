export BAKD=/backup &&
export CERD=/cerata &&
export LOGD=/logs &&
export SCRD=/scripts &&
export SRCD=/sources &&
export TMPD=/temporary &&

export TOOL=/toolchain &&

export SLOG=$LOGD/system/$(ls -l $LOGD/system | wc -l) &&
export SSCR=$SCRD/system &&
export STMP=$TMPD/system &&

export SBLD=$STMP/builds &&
export SCER=$STMP/cerata &&
export SSRC=$STMP/sources &&

export PATH=/usr/bin/ccache:/usr/bin:/bin:$TOOL/bin/ccache:$TOOL/bin &&

export CCACHE_DIR=/.ccache &&

export PKG_CONFIG_PATH=/usr/lib/pkgconfig:/usr/share/pkgconfig &&
export PKG_CONFIG_LIBDIR=/usr/lib/pkgconfig:/usr/share/pkgconfig &&
export PKG_CONFIG_SYSTEM_INCLUDE_PATH=/usr/include &&
export PKG_CONFIG_SYSTEM_LIBRARY_PATH=/usr/lib &&

export AR=gcc-ar &&
export NM=gcc-nm &&
export RANLIB=gcc-ranlib
