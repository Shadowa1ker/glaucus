find $TLCD/sysroot/etc -type d -empty -delete &&

$RM $TLCD/sysroot/tmp/* &&

find $TLCD/sysroot/usr -name *.a -type f -exec strip -gv {} \; &&
find $TLCD/sysroot/usr \( -name *.so* -a ! -name *dbg \) -type f -exec strip \
  --strip-unneeded -v {} \; &&
find $TLCD/sysroot/usr -type f -exec strip -sv {} \; &&
find $TLCD/sysroot/usr -name *.la -delete &&

$RM $TLCD/sysroot/usr/lib/charset.alias
