envenomate() {
  for ceras in $@; do
    install -dv $SCER/$ceras/sac $SCER/$ceras/venom

    . $CERD/$ceras/ceras
    . $CERD/$nom/system.ceras
    
    prepare_system || { echo system $nom prepare failed; exit $?;  }
    configure_system || { echo system $nom configure failed; exit $?; }
    build_system || { echo system $nom build failed; exit $?; }
    install_system || { echo system $nom install failed; exit $?; }

    rsync -vah $SCER/$nom/sac/ /
  done
}

