sudo \
  $UMOUNT $GLAD/dev ||
  true
sudo \
  $UMOUNT $GLAD/proc ||
  true
sudo \
  $UMOUNT $GLAD/sys ||
  true
sudo \
  $UMOUNT $GLAD/run ||
  true

sudo \
  $RM $GLAD/bin ||
  true
sudo \
  $RM $GLAD/boot ||
  true
sudo \
  $RM $GLAD/dev ||
  true
sudo \
  $RM $GLAD/etc ||
  true
sudo \
  $RM $GLAD/proc ||
  true
sudo \
  $RM $GLAD/root ||
  true
sudo \
  $RM $GLAD/run ||
  true
sudo \
  $RM $GLAD/sys ||
  true

$RM $GLAD/system ||
  true

sudo \
  $RM $GLAD/tmp ||
  true

$RM $GLAD/toolchain ||
  true

sudo \
  $RM $GLAD/usr ||
  true
sudo \
  $RM $GLAD/var ||
  true
