export CHOWN='/usr/bin/chown -v' &&
export RM='/usr/bin/rm -frv' &&
export RSYNC='/usr/bin/rsync -vaHAXSxh' &&
export UMOUNT='/usr/bin/umuont -fRv' &&

sudo \
  $UMOUNT /home/glaucus/dev || true
sudo \
  $UMOUNT /home/glaucus/proc || true
sudo \
  $UMOUNT /home/glaucus/sys || true
sudo \
  $UMOUNT /home/glaucus/run || true

sudo \
  $RM /home/glaucus/bin || true
sudo \
  $RM /home/glaucus/boot || true
sudo \
  $RM /home/glaucus/dev || true
sudo \
  $RM /home/glaucus/etc || true
sudo \
  $RM /home/glaucus/proc || true
sudo \
  $RM /home/glaucus/root || true
sudo \
  $RM /home/glaucus/run || true
sudo \
  $RM /home/glaucus/sys || true
sudo \
  $RM /home/glaucus/usr || true
sudo \
  $RM /home/glaucus/var || true
sudo \
  $RM /home/glaucus/tmp || true

sudo \
  $CHOWN glaucus:glaucus /home/glaucus &&

[ -d /home/glaucus/backup/toolchain ] &&

sudo \
  $RSYNC /home/glaucus/backup/toolchain/ /home/glaucus/toolchain --delete
