export PATH=$CRSS/bin:$PATH

# Cross-compilation only related variables, these will only be called when
# constructing the cross-compilation toolchain
export XLOG=$LOGD/cross
export XBLD=$TMPD/cross/builds
export XSRC=$TMPD/cross/sources

# Since we're building GCC the hard dynamic way
export LDFLAGS=-Wl,-rpath,$CRSS/lib
export LD_LIBRARY_PATH=$CRSS/lib

# Do not define the following environment variables as they are not needed and
# will cause build errors:
#export CC="gcc --sysroot=$CRSS/$TUPL"
#export CPP="gcc --sysroot=$CRSS/$TUPL -E"
#export CXX="g++ --sysroot=$CRSS/$TUPL"
#export LD="ld --sysroot=$CRSS/$TUPL"
