construct() {
  . $CERD/$1/ceras
  . $CERD/$nom/chroot.ceras

  prepare_chroot || { printf "chroot $nom prepare failed\n"; exit $?; }
  configure_chroot || { printf "chroot $nom configure failed\n"; exit $?; }
  build_chroot || { printf "chroot $nom build failed\n"; exit $?; }
  install_chroot || { printf "chroot $nom install failed\n"; exit $?; }
}

construct m4
construct netbsd-curses
construct oksh
construct dash
construct bash
construct bison
construct lbzip2
construct toybox
construct rsync
construct diffutils
construct file
construct mawk
construct gettext-tiny
construct grep
construct zlib-ng
construct pigz
construct make
construct patch
construct perl
construct sed
construct xz
construct libarchive
construct texinfo
