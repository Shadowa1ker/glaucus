construct() {
  for ceras in $@; do
    . $CERD/$ceras/ceras/ceras
    . $CERD/$ceras/ceras/chroot.ceras

    prepare_chroot || { echo chroot $ceras prepare failed; exit $?; }
    configure_chroot || { echo chroot $ceras configure failed; exit $?; }
    build_chroot || { echo chroot $ceras build failed; exit $?; }
    install_chroot || { echo chroot $ceras install failed; exit $?; }
  done
}

construct qm4
construct netbsd-curses oksh
construct dash
construct byacc
construct bzip2
construct libressl
construct toybox
construct mawk
construct gettext-tiny
construct gzip
construct make
construct perl
construct libarchive
construct texinfo
construct xz
construct rsync
