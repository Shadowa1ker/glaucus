construct() {
  . $CERD/$1/ceras &&
  . $CERD/$nom/chroot.ceras &&

  prepare_chroot || $SCRD/exit chroot $nom prepare $? || exit &&
  configure_chroot || $SCRD/exit chroot $nom configure $? || exit &&
  build_chroot || $SCRD/exit chroot $nom build $? || exit &&
  install_chroot || $SCRD/exit chroot $nom install $? || exit
}

construct m4 &&
construct netbsd-curses &&
construct oksh &&
construct dash &&
construct bash &&
construct bison &&
construct lbzip2 &&
construct toybox &&
construct rsync &&
construct diffutils &&
construct file &&
construct mawk &&
construct gettext-tiny &&
construct grep &&
construct zlib-ng &&
construct pigz &&
construct make &&
construct patch &&
construct perl &&
construct sed &&
construct xz &&
construct libarchive &&
construct texinfo
