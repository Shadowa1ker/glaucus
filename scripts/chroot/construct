construct() {
  for ceras in $@; do
    . $CERD/$ceras/ceras/ceras
    . $CERD/$ceras/ceras/chroot.ceras

    prepare_chroot || { echo chroot $ceras prepare failed; exit $?; }
    configure_chroot || { echo chroot $ceras configure failed; exit $?; }
    build_chroot || { echo chroot $ceras build failed; exit $?; }
    install_chroot || { echo chroot $ceras install failed; exit $?; }
  done
}

construct gettext-tiny
construct netbsd-curses
construct oksh
construct dash
construct bash
construct make
construct byacc
construct flex
construct qm4
construct libressl
construct toybox
construct gzip
construct bzip2
construct libarchive
construct mawk
construct autoconf
construct automake
construct libtool
construct xz
construct perl
construct rsync
