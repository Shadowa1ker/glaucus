construct() {
  for ceras in $@; do
    . $CERD/$ceras/ceras
    . $CERD/$nom/chroot.ceras

    prepare_chroot || { printf chroot $nom prepare failed; exit $?; }
    configure_chroot || { printf chroot $nom configure failed; exit $?; }
    build_chroot || { printf chroot $nom build failed; exit $?; }
    install_chroot || { printf chroot $nom install failed; exit $?; }
  done
}

construct m4
construct netbsd-curses
construct oksh
construct dash
construct bash
construct bison
construct lbzip2
construct toybox
construct rsync
construct diffutils
construct file
construct mawk
construct gettext-tiny
construct grep
construct zlib-ng
construct pigz
construct make
construct patch
construct perl
construct sed
construct xz
construct libarchive
construct texinfo
