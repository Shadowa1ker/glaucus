sudo \
  LD_LIBRARY_PATH=$TOOL/lib \
  install -dv $GLAD/bin

sudo \
  LD_LIBRARY_PATH=$TOOL/lib \
  ln -fsv $TOOL/bin/dash $GLAD/bin/sh

sudo \
  LD_LIBRARY_PATH=$TOOL/lib \
  ln -fsv $TOOL/bin/bash $GLAD/bin/bash
