export CLOG=$LOGD/chroot/$(ls -l $GLAD/logs/chroot | wc -l) &&
export CSCR=$SCRD/chroot &&
export CTMP=$TMPD/chroot &&

export CBLD=$CTMP/builds &&
export CSRC=$CTMP/sources &&

export CCCH=/usr/lib64/ccache &&

export PATH=$TOOL/bin/ccache:$TOOL/bin:$CCCH:/usr/bin &&

export AR=gcc-ar &&
export NM=gcc-nm &&
export RANLIB=gcc-ranlib &&

. $SCRD/genome &&

. $SCRD/species &&
export CPPFLAGS=-I$TOOL/include
