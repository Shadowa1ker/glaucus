$RM $TOOL/lib64 &&

find $TOOL/ -name *.la -delete &&

strip -g $TOOL/lib/* ||
true
/usr/bin/strip --strip-unneeded $TOOL/bin/* ||
true

$RM $TOOL/share/doc &&
$RM $TOOL/share/info &&
$RM $TOOL/share/man
