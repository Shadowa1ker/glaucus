sudo \
  $MKDIR $GLAD/dev &&
sudo \
  $MKDIR $GLAD/proc &&
sudo \
  $MKDIR $GLAD/run &&
sudo \
  $MKDIR $GLAD/sys &&

sudo \
  mknod -m 600 $GLAD/dev/console c 5 1 &&
sudo \
  mknod -m 666 $GLAD/dev/null c 1 3 &&

sudo \
  mount -vB /dev $GLAD/dev &&

sudo \
  mount -vt devpts -o gid=1,mode=0600 devpts $GLAD/dev/pts &&
sudo \
  mount -vt proc proc $GLAD/proc &&
sudo \
  mount -vt sysfs sys $GLAD/sys &&
sudo \
  mount -vt tmpfs tmpfs $GLAD/run
