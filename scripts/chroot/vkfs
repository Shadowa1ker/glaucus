sudo \
  /usr/bin/install -dv $GLAD/dev $GLAD/proc $GLAD/run $GLAD/sys

sudo \
  /usr/bin/mknod -m 600 $GLAD/dev/console c 5 1
sudo \
  /usr/bin/mknod -m 666 $GLAD/dev/null c 1 3

sudo \
  /usr/bin/mount -v /dev $GLAD/dev

sudo \
  /usr/bin/mount -vt devpts -o noexec,nosuid,gid=1,mode=0600 devpts $GLAD/dev/pts
sudo \
  /usr/bin/mount -vt proc -o nodev,noexec,nosuid proc $GLAD/proc
sudo \
  /usr/bin/mount -vt sysfs -o noatime,nodev,noexec,nosuid sys $GLAD/sys
sudo \
  /usr/bin/mount -vt tmpfs -o noatime,nodev,noexec,nosuid tmpfs $GLAD/run
