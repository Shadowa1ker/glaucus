nom=libpciaccess
ver=git
url=https://gitlab.freedesktop.org/xorg/lib/$nom
lic=MIT

prepare_system() {
  $RSYNC $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
