prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  :
}

build_system() {
  make \
    AR=$AR \
    RANLIB=$RANLIB
}

install_system() {
  make \
    PREFIX=/usr \
    DESTDIR=$SCER/$nom/sac \
    install &&

  $LN $nom $SCER/$nom/sac/usr/bin/f$nom
}
