name=libinput
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/$name/$name
cyst=musl
description='Input device management and event handling library'
license=MIT

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  ./configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
