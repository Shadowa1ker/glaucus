name=util-macros
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/util/macros
cyst=musl
description='GNU autoconf macros shared across X.Org projects'
license=MIT
build(){
        rsync -vah $CERD/$name/macros/ $SSRC/$name --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
