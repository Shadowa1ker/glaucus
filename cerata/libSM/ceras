name=libSM
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libsm
cysts='musl util-macros libxtrans libICE'
description='X Session Management Library'
license=MIT
build(){
        rsync -vah $CERD/$name/libsm/ $SSRC/$name --delete
        cd $SSRC/$name
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-docs \
                --disable-ipv6 \
                --without-xmlto \
                --without-fop \
                --without-xsltproc \
                --without-libuuid
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
