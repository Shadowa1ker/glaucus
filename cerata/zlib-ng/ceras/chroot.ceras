prepare_chroot() {
  rsync -vah $CERD/$nom/$nom $CSRC --delete
  cd $CSRC/$nom
}

configure_chroot() {
  sed 's/bash/dash/' \
    -i configure

  ./configure \
    --prefix=$TOOL \
    --zlib-compat
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
