prepare_system() {
  rsync -vah $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure_system() {
  sed 's/bash/dash/' \
    -i configure

  ./configure \
    --prefix=/usr \
    --zlib-compat
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
