prepare_chroot() {
  install -dv $CBLD/$nom
  cd $CBLD/$nom
}

configure_chroot() {
  #sed 's/bash/dash/' \
    #-i configure

  $SRCD/$nom/$nom-$ver/configure \
    --prefix=$TOOL \
    --zlib-compat
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
