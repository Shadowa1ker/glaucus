prepare_chroot() {
  $RSYNC $SRCD/$nom $CSRC --delete &&
  cd $CSRC/$nom
}

configure_chroot() {
  sed s/bash/dash/ \
    -i configure &&

  CFLAGS="$CFLAGSNOCOMMON" \
  ./configure \
    --prefix=$TOOL \
    --zlib-compat
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
