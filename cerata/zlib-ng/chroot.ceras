prepare_chroot() {
  install -dv $CBLD/$nom &&
  cd $CBLD/$nom
}

configure_chroot() {
  CFLAGS="$CFLAGSNOCOMMON" \
  ./configure \
    --prefix=$TOOL \
    --zlib-compat
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
