name=libdmx
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/$name
cysts='musl util-macros'
description='Xlib-based library for the DMX (Distributed Multihead X) extension'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
