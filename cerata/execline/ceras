name=execline
version=git
release=1
description='A small and non-interactive scripting language, like sh; but with different syntax'
arch=x86_64
url=git://git.skarnet.org/$name
license=ISC
build () {
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/ \
                --with-sysdeps=$GLAD/lib/skalibs/sysdeps \
                --with-include=$GLAD/include \
                --with-dynlib=$GLAD/lib \
                --enable-shared \
                --disable-static \
                --disable-allstatic
        sed -e "/CFLAGS :=/ cCFLAGS := $CFLAGS -fno-stack-protector" \
                -i config.mak
        make
        make \
                install
}
