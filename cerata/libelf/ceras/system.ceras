prepare_system() {
  rsync -vah $CERD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure_system() {
  ./configure
}

build_system() {
  make
}

install_system() {
  make \
    prefix=$SCER/$nom/sac/usr \
    install
}
