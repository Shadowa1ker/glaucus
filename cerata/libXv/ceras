name=libXv
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/libxv
cysts='musl util-macros'
description='Xlib-based library for the X Video (Xv) extension to the X Window System'
license=MIT

prepare() {
  rsync -vah $CERD/$name/libxv/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build() {
  make
}

install() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
