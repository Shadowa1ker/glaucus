nom=libXv
ver=git
url=https://gitlab.freedesktop.org/xorg/lib/libxv
lic=MIT

prepare_system() {
  rsync -vah $CERD/$nom/libxv/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure_system() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
