prepare_chroot() {
  $RSYNC $SRCD/$nom/ $CSRC/$nom --delete &&
  cd $CSRC/$nom
}

configure_chroot() {
  ./configure \
    --prefix=$TOOL \
    --mandir=$TOOL/share/man
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install &&

  $LN $nom $TOOL/bin/m4
}
