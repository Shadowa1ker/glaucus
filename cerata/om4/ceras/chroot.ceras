prepare_chroot() {
  rsync -vah $CERD/$name/m4/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  ./configure \
    --prefix=$TOOL \
    --mandir=$TOOL/share/man
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install

  cd $TOOL/bin
  ln -fsv $name m4
}
