prepare_chroot() {
  rsync -vah $CERD/$nom/m4/ $CSRC/$nom --delete
  cd $CSRC/$nom
}

configure_chroot() {
  ./configure \
    --prefix=$TOOL \
    --mandir=$TOOL/share/man
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install

  cd $TOOL/bin
  ln -fsv $nom m4
}
