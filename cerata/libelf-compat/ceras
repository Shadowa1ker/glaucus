name=libelf-compat
version=git
release=1
arch=x86-64
url=https://github.com/sabotage-linux/$name
cyst=musl
description='libelf stripped off of elfutils 0.152 and cleaned up portability
issues and autocrap'
licenses='GPLv2+ GPLv3+ LGPLv3'

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  cat > config.mak << EOF
prefix=/usr
sysconfdir=/etc
CFLAGS=$CFLAGS -std=gnu99 -D_GNU_SOURCE
CC=$CC
AR=$AR
RANLIB=$RANLIB
EOF
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install
}
