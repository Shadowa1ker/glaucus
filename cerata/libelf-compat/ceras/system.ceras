prepare() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure() {
  cat > config.mak << EOF
prefix=/usr
sysconfdir=/etc
CFLAGS=$CFLAGS -D_GNU_SOURCE
AR=$AR
RANLIB=$RANLIB
EOF
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install
}
