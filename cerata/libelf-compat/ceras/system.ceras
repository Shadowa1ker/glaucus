prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  cat > config.mak << EOF
prefix=/usr
sysconfdir=/etc
CFLAGS=$CFLAGS -D_GNU_SOURCE
AR=$AR
RANLIB=$RANLIB
EOF
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install
}
