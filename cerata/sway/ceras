name=sway
version=git
release=1
arch=x86_64
url=https://github.com/swaywm/sway
cysts='musl zlib libpng pixman cairo pango json-c libelf-compat glib fribidi freetype harfbuzz fontconfig expat libffi wayland-protocols wayland wlroots'
description='An i3-compatible Wayland compositor'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
