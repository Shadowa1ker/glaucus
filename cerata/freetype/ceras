name=freetype
version=git
release=1
arch=x86_64
url=https://$version.sv.nongnu.org/r/$name/freetype2
cyst=musl
description='A freely available software library to render fonts'
license='FTL GPLv2+ MIT zlib'
build(){
        rsync -vah $CERD/$name/freetype2/ $SSRC/$name --delete
        cd $SSRC/$name
        ./autogen.sh
        case $item in
                freetype_1)
                        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
                        ./configure \
                                --prefix=/usr \
                                --build=$TUPL \
                                --host=$TUPL \
                                --target=$TUPL \
                                --disable-static \
                                --without-harfbuzz
                        ;;
                freetype_2)
                        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
                        ./configure \
                                --prefix=/usr \
                                --build=$TUPL \
                                --host=$TUPL \
                                --target=$TUPL \
                                --disable-static
                        ;;
        esac
        make
        make DESTDIR=$SCER/$item/sac \
                install
}
