prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&
  
  $SCRD/patch 1 $nom gentoo $nom-1.16.0-rename-man
}

configure() {
  ./configure \
    --prefix=/usr \
    --disable-static
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip &&

  $MKDIR $SCER/$nom/sac/usr/include/readline &&
  
  touch $SCER/$nom/sac/usr/include/readline/history.h &&
  touch $SCER/$nom/sac/usr/include/readline/tilde.h &&

  $LN ../$nom.h $SCER/$nom/sac/usr/include/readline/readline.h &&
  
  $LN lib$nom.so $SCER/$nom/sac/usr/lib/libreadline.so
}
