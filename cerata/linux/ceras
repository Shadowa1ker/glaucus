build(){
        mkdir -v $SBLD/$name
        rsync -vah $CERD/$name/glaucus.config $SBLD/$name/.config --delete
        cd $CERD/$name/$name-stable
        make \
                mrproper
        make \
                O=$SBLD/$name \
                oldconfig
        make \
                O=$SBLD/$name \
                prepare
        make \
                O=$SBLD/$name
        cat $SBLD/$name/arch/x86/boot/bzImage > $GLAD/boot/vmlinuz
        rsync -vah $SBLD/$name/System.map $GLAD/boot --delete
}
