prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&

  $MKDIR $SBLD/$nom &&

  cd $SSRC/$nom &&

  make \
    mrproper &&

  for i in 0104-pci-pme-wakeups 0105-ksm-wakeups 0106-intel_idle-tweak-cpuidle-cstates \
    0108-smpboot-reuse-timer-calibration 0110-Initialize-ata-before-graphics \
    0111-give-rdrand-some-credit 0112-ipv4-tcp-allow-the-memory-tuning-for-tcp-to-go-a-lit \
    0113-kernel-time-reduce-ntp-wakeups 0121-use-lfence-instead-of-rep-and-nop \
    0122-do-accept-in-LIFO-order-for-cache-efficiency 0124-locking-rwsem-spin-faster \
    0125-ata-libahci-ignore-staggered-spin-up 0130-nvme-workaround; do
    $SCRD/patch 1 $nom clear $i
  done

  $SCRD/patch 1 $nom dolohow uksm-5.6 &&

  $SCRD/patch 0 $nom glaucus 0001-libarchive-bsdtar-compatibility &&

  for i in 0001-aufs-20200302 0001-consolemap-Fix-a-memory-leaking-bug-in-drivers-tty-v \
    0001-cpu-5.6-merge-graysky-s-patchset 0001-futex-Implement-mechanism-to-wait-on-any-of-several- \
    0001-lib-prepare-zstd-for-preboot-environment 0001-net-sched-allow-configuring-cake-qdisc-as-default \
    0002-ZEN-intel-pstate-Implement-enable-parameter 0002-infiniband-Fix-__read_overflow2-error-with-O3-inlini \
    0002-init-Kconfig-enable-O3-for-all-arches 0002-lib-prepare-xxhash-for-preboot-environment \
    0003-block-set-rq_affinity-2-for-full-multithreading-I-O- 0003-lib-add-zstd-support-to-decompress \
    0003-sched-core-nr_migrate-256-increases-number-of-tasks- 0004-init-add-support-for-zstd-compressed-kernel \
    0004-kbuild-reuse-intermediate-linker-scripts-in-the-fina 0004-mm-set-2048-for-address_space-level-file-read-ahead- \
    0005-drm-Remove-PageReserved-manipulation-from-drm_pci_al 0005-futex-Add-Proton-compatibility-code \
    0005-usr-add-support-for-zstd-compressed-initramfs 0006-x86-bump-ZO_z_extra_bytes-margin-for-zstd \
    0007-x86-Add-support-for-ZSTD-compressed-kernel 0008-.gitignore-add-ZSTD-compressed-files; do
    $SCRD/patch 1 $nom sirlucjan $i
  done
}

configure_system() {
  $RSYNC $CERD/$nom/glaucus.config $SBLD/$nom/.config &&

  for i in oldconfig prepare; do
    make \
      O=$SBLD/$nom \
      $i
  done
}

build_system() {
  make \
    O=$SBLD/$nom
}

install_system() {
  make \
    O=$SBLD/$nom \
    INSTALL_MOD_PATH=$SCER/$nom/sac/usr \
    modules_install &&

  $MKDIR $SCER/$nom/sac/boot &&

  $RSYNC $SBLD/$nom/arch/x86/boot/bzImage $SCER/$nom/sac/boot/vmlinuz &&
  $RSYNC $SBLD/$nom/System.map $SCER/$nom/sac/boot
}
