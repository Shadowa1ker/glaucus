prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&

  $MKDIR $SBLD/$nom &&

  cd $SSRC/$nom &&

  $MAKE \
    mrproper &&

  $SCRD/patch 1 $nom clear 0104-pci-pme-wakeups.patch &&
  $SCRD/patch 1 $nom clear 0105-ksm-wakeups.patch &&
  $SCRD/patch 1 $nom clear 0106-intel_idle-tweak-cpuidle-cstates.patch &&
  $SCRD/patch 1 $nom clear 0108-smpboot-reuse-timer-calibration.patch &&
  $SCRD/patch 1 $nom clear 0110-Initialize-ata-before-graphics.patch &&
  $SCRD/patch 1 $nom clear 0111-give-rdrand-some-credit.patch &&
  $SCRD/patch 1 $nom clear 0112-ipv4-tcp-allow-the-memory-tuning-for-tcp-to-go-a-lit.patch &&
  $SCRD/patch 1 $nom clear 0113-kernel-time-reduce-ntp-wakeups.patch &&
  $SCRD/patch 1 $nom clear 0121-use-lfence-instead-of-rep-and-nop.patch &&
  $SCRD/patch 1 $nom clear 0122-do-accept-in-LIFO-order-for-cache-efficiency.patch &&
  $SCRD/patch 1 $nom clear 0123-locking-rwsem-spin-faster.patch &&
  $SCRD/patch 1 $nom clear 0124-ata-libahci-ignore-staggered-spin-up.patch &&
  $SCRD/patch 1 $nom clear 0129-nvme-workaround.patch &&

  $SCRD/patch 0 $nom glaucus 0001-libarchive-bsdtar-compatibility &&

  $SCRD/patch 1 $nom sirlucjan 0001-UKSM-for-5.6.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-aufs-20200413.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-consolemap-Fix-a-memory-leaking-bug-in-drivers-tty-v.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-cpu-5.6-merge-graysky-s-patchset.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-futex-Implement-mechanism-to-wait-on-any-of-several-.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-lib-prepare-zstd-for-preboot-environment.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-mm-pagealloc.c-call-touch_nmi_watchdog-on-max-order-.patch &&
  $SCRD/patch 1 $nom sirlucjan 0001-net-sched-allow-configuring-cake-qdisc-as-default.patch &&
  $SCRD/patch 1 $nom sirlucjan 0002-ZEN-intel-pstate-Implement-enable-parameter.patch &&
  $SCRD/patch 1 $nom sirlucjan 0002-infiniband-Fix-__read_overflow2-error-with-O3-inlini.patch &&
  $SCRD/patch 1 $nom sirlucjan 0002-init-Kconfig-enable-O3-for-all-arches.patch &&
  $SCRD/patch 1 $nom sirlucjan 0002-lib-prepare-xxhash-for-preboot-environment.patch &&
  $SCRD/patch 1 $nom sirlucjan 0002-mm-initialize-deferred-pages-with-interrupts-enabled.patch &&
  $SCRD/patch 1 $nom sirlucjan 0003-block-set-rq_affinity-2-for-full-multithreading-I-O-.patch &&
  $SCRD/patch 1 $nom sirlucjan 0003-lib-add-zstd-support-to-decompress.patch &&
  $SCRD/patch 1 $nom sirlucjan 0003-mm-call-cond_resched-from-deferred_init_memmap.patch &&
  $SCRD/patch 1 $nom sirlucjan 0003-sched-core-nr_migrate-256-increases-number-of-tasks-.patch &&
  $SCRD/patch 1 $nom sirlucjan 0004-init-add-support-for-zstd-compressed-kernel.patch &&
  $SCRD/patch 1 $nom sirlucjan 0004-kbuild-reuse-intermediate-linker-scripts-in-the-fina.patch &&
  $SCRD/patch 1 $nom sirlucjan 0004-mm-set-2048-for-address_space-level-file-read-ahead-.patch &&
  $SCRD/patch 1 $nom sirlucjan 0004-padata-remove-exit-routine.patch &&
  $SCRD/patch 1 $nom sirlucjan 0005-padata-initialize-earlier.patch &&
  $SCRD/patch 1 $nom sirlucjan 0005-usr-add-support-for-zstd-compressed-initramfs.patch &&
  $SCRD/patch 1 $nom sirlucjan 0006-padata-allocate-work-structures-for-parallel-jobs-fr.patch &&
  $SCRD/patch 1 $nom sirlucjan 0006-x86-bump-ZO_z_extra_bytes-margin-for-zstd.patch &&
  $SCRD/patch 1 $nom sirlucjan 0007-padata-add-basic-support-for-multithreaded-jobs.patch &&
  $SCRD/patch 1 $nom sirlucjan 0007-x86-Add-support-for-ZSTD-compressed-kernel.patch &&
  $SCRD/patch 1 $nom sirlucjan 0008-.gitignore-add-ZSTD-compressed-files.patch &&
  $SCRD/patch 1 $nom sirlucjan 0008-mm-move-zone-iterator-outside-of-deferred_init_maxor.patch &&
  $SCRD/patch 1 $nom sirlucjan 0009-mm-parallelize-deferred_init_memmap.patch &&
  $SCRD/patch 1 $nom sirlucjan 0010-padata-document-multithreaded-jobs.patch
} &&

configure() {
  $RSYNC $CERD/$nom/glaucus.config $SBLD/$nom/.config &&

  $MAKE \
    O=$SBLD/$nom \
    oldconfig &&
  
  $MAKE \
    O=$SBLD/$nom \
    prepare
} &&

build() {
  $MAKE \
    O=$SBLD/$nom
} &&

install() {
  $MAKE \
    O=$SBLD/$nom \
    INSTALL_MOD_PATH=$SCER/$nom/sac/usr \
    modules_install &&

  $MKDIR $SCER/$nom/sac/boot &&

  $RSYNC $SBLD/$nom/arch/x86/boot/bzImage $SCER/$nom/sac/boot/vmlinuz &&
  $RSYNC $SBLD/$nom/System.map $SCER/$nom/sac/boot
}
