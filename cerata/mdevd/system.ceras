prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  $SCRD/patch 0 $nom glaucus 0001-use-gnu-hash-style &&

  ./configure \
    --prefix=/usr \
    --libexecdir=/usr/lib/libexec \
    --with-sysdeps=/usr/lib/skalibs/sysdeps \
    --with-include=/usr/include \
    --with-dynlib=/usr/lib \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --disable-all-pic &&

  sed -e "s/CFLAGS := .*/CFLAGS := $CFLAGS -fno-stack-protector/" \
    -i config.mak
}

build_system() {
  make \
    strip
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
