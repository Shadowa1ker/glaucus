prepare_chroot() {
  install -dv $CBLD/$nom
  cd $CBLD/$nom
}

configure_chroot() {
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=$TOOL \
    --host=$TUPL \
    --disable-libseccomp \
    --enable-fsect-man5
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip
}
