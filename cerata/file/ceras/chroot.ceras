prepare_chroot() {
  rsync -vah $CERD/$name/$name-$version/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  ./configure \
    --prefix=$TOOL \
    --host=$TUPL \
    --disable-libseccomp \
    --enable-fsect-man5
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip
}
