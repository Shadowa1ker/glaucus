name=file
version=git
release=1
description='File type guesser that uses "magic" numbers to scan binary data for patterns'
arch=x86_64
url=https://github.com/$name/$name
license='Apachev2.0 BSDv2 BSDv3 GPLv2 LGPLv2.1'
build () {
        rsync -vah $CERD/$name/$name/ $TMPD/system/sources/$name/ --delete
        cd $TMPD/system/sources/$name
        autoreconf -vfi
        AR=$AR \
        AS=$AS \
        AWK=$GLAD/bin/mawk \
        CC=$CC \
        LD=$LD \
        NM=$NM \
        OBJDUMP=$OBJDUMP \
        RANLIB=$RANLIB \
        STRIP=$STRIP \
        CFLAGS="$CFLAGS" \
        LDFLAGS="$LDFLAGS" \
        ./configure \
                --build=$ARCH-pc-linux-gnu \
                --host=$TRPL \
                --prefix= \
                --disable-libseccomp
        make
        make \
                DESTDIR=$GLAD \
                install-strip
}
