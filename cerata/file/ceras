name=file
version=git
release=1
arch=x86-64
url=https://github.com/$name/$name
cysts='musl mawk'
description='File type guesser that uses "magic" numbers to scan binary data for patterns'
licenses='Apachev2.0 BSDv2 BSDv3 GPLv2+ GPLv3+'

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  autoreconf -vfi
  ./configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-libseccomp \
    --enable-fsect-man5
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
