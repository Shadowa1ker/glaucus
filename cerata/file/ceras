name=file
version=git
release=1
arch=x86_64
url=https://github.com/$name/$name
cysts='musl mawk'
description='File type guesser that uses "magic" numbers to scan binary data for patterns'
license='Apachev2.0 BSDv2 BSDv3 GPLv2 LGPLv2.1'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        autoreconf -vfi
        ./configure \
                --build=$TRPL \
                --host=$TRPL \
                --target=$TRPL \
                --prefix= \
                --disable-libseccomp \
                --enable-fsect-man5
        make
        make \
                DESTDIR=$SCER/$name/sac \
                install-strip
}
