prepare_system() {
  install -dv $SBLD/$name
  cd $SBLD/$name
}

configure_system() {
  $CERD/$name/$name-$version/configure \
    --prefix=/usr \
    --disable-static \
    --enable-jit
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
