name=pcre2
version=svn
release=1
arch=x86_64
url=svn://vcs.exim.org/$name/code/trunk
description='The 2nd version of the Perl 5 Compatible Regular Expressions library'
license=BSDv3
build(){
        rsync -vah $CERD/$name/trunk/ $SSRC/$name --delete
        cd $SSRC/$name
        autoreconf -vfi
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix= \
                --disable-static \
                --enable-jit
        make
        make \
                install-strip
        make \
                DESTDIR=$SCER/$name/sac \
                install-strip
}
