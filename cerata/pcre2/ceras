name=pcre2
version=svn
release=1
description='The 2nd version of the Perl 5 Compatible Regular Expressions library'
arch=x86_64
url=svn://vcs.exim.org/$name/code/trunk
license=BSDv3
build () {
        rsync -vah $CERD/$name/$name/ $TMPD/system/sources/$name/ --delete
        cd $TMPD/system/sources/$name
        autoreconf -vfi
        mkdir -v $TMPD/system/builds/$name
        cd $TMPD/system/builds/$name
        AR=$AR \
        AS=$AS \
        AWK=$GLAD/bin/mawk \
        CC=$CC \
        CXX=$CXX \
        LD=$LD \
        NM=$NM \
        OBJDUMP=$OBJDUMP \
        RANLIB=$RANLIB \
        STRIP=$STRIP \
        CFLAGS="$CFLAGS" \
        CXXFLAGS="$CXXFLAGS" \
        LDFLAGS="$LDFLAGS" \
        $TMPD/system/sources/$name/configure \
                --prefix= \
                --disable-static \
                --enable-jit
        make
        make \
                DESTDIR=$GLAD \
                install-strip
}
