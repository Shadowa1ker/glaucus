name=pcre2
version=svn
release=1
description='The 2nd version of the Perl 5 Compatible Regular Expressions library'
arch=x86_64
url=svn://vcs.exim.org/pcre2/code/trunk
license=BSDv3

build () {
	tar xvf $CERD/$name/$name-$version.tar.gz -C $TMPD/system/sources
	cd $TMPD/system/sources/$name-$version
	AR=$AR AS=$AS CC=$CC OBJDUMP=$OBJDUMP RANLIB=$RANLIB STRIP=$STRIP AWK=$GLAD/bin/mawk CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure \
		--prefix= \
		--disable-static \
		--enable-jit
	make
	make DESTDIR=$GLAD install
}
