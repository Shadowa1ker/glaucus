name=pcre2
version=svn
release=1
arch=x86-64
url=svn://vcs.exim.org/$name/code/trunk
cysts='musl mawk'
description='The 2nd version of the Perl 5 Compatible Regular Expressions library'
license=BSDv3
build(){
        rsync -vah $CERD/$name/trunk/ $SSRC/$name --delete
        cd $SSRC/$name
        ./autogen.sh
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --enable-jit
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
