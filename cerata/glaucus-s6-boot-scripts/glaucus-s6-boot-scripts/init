#!/bin/execlineb -P
export PATH /bin
cd /
s6-setsid -b 
umask 022
if { s6-mount -nt tmpfs -o mode=0755 tmpfs /run }
if { s6-hiercopy /etc/s6/run /run }
if { s6-mkfifo -m 0600 /run/service/s6-log/fifo }
emptyenv -p
s6-envdir -I /etc/s6/env
redirfd -r 0 /dev/null
redirfd -wnb 1 /run/service/s6-log/fifo
background
{
        s6-setsid
        redirfd -w 1 /run/service/s6-log/fifo
        fdmove -c 1 2
        /etc/s6/rc.init
}
unexport !
fdmove -c 2 1
s6-svscan -st0 /run/service
