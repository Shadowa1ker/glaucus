name=glaucus-s6-boot-scripts
version=git
release=1
arch=x86-64
url=https://github.com/firasuke/$name
cysts='musl skalibs execline s6 utmps s6-linux-init s6-rc'
description='s6 boot scripts for glaucus'
cluster=core
license=ISC

prepare_system() {
  :
}

configure_system() {
  :
}

build_system() {
  :
}

install_system() {
  rsync -vah $CERD/$name/$name/etc $SCER/$name/sac --delete
  rsync -vah $CERD/$name/$name/usr $SCER/$name/sac --delete

  LD_LIBRARY_PATH=$GLAD/usr/lib \
  $GLAD/usr/bin/s6-rc-compile $SCER/$name/sac/etc/s6/compiled \
    $SCER/$name/sac/etc/s6/source
}
