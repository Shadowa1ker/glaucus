prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  sed "s/isfile(a)/& and not a.startswith('\/dev')/" \
    -i mesonbuild/interpreter.py
}

configure_system() {
  :
}

build_system() {
  python3 setup.py \
    build
}

install_system() {
  python3 setup.py \
    install \
    --root=$SCER/$nom/sac
}
