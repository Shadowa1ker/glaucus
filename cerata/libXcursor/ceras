name=libXcursor
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/libxcursor
cysts='musl util-macros'
description='Xlib-based Cursor management library'
license=MIT
build(){
        rsync -vah $CERD/$name/libxcursor/ $SSRC/$name --delete
        cd $SSRC/$name
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
