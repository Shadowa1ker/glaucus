prepare_cross() {
  rsync -vah $CERD/$name/trunk/ $TSRC/$name --delete --exclude=.$version
  cd $TSRC/$name
}

configure_cross() {
  ./autogen.sh

  ./configure \
    --prefix=$TOOL \
    --disable-static \
    --with-gmp=$TOOL
}

build_cross() {
  make
}

install_cross() {
  make \
    install-strip
}
