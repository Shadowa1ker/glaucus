version=1.14.4
url=http://mandoc.bsd.lv/snapshots/mandoc-$version.tar.gz
checksum=c68390711a739284ad9a61364f3fea76c0c48c02b4830d6326b07c4188d099e3720ae3b91fc3b083269381b417b7e3f3647d13a54ed2548f8c2f94122f8a7d97

build_system () {
	tar xfv $CERD/mandoc/mandoc-$version.tar.gz -C $TMPD/system/sources

	cd $TMPD/system/sources/mandoc-$version

cat > configure.local << EOF
OSNAME=glaucus
PREFIX=$GLAD
AR=$AR
CC=$CC
CFLAGS="$CFLAGS"
LDFLAGS="$LDFLAGS"
EOF

	./configure
	make
	make install
}
