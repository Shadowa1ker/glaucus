version=1.14.4
url=http://mandoc.bsd.lv/snapshots/mandoc-$version.tar.gz
release=1

build_system () {
	tar xfv $CERD/mandoc/mandoc-$version.tar.gz -C $TMPD/system/sources

	cd $TMPD/system/sources/mandoc-$version

cat > configure.local << EOF
HAVE_WCHAR=1
OSNAME=glaucus
PREFIX=$GLAD
MANPATH_DEFAULT=/share/man
AR=$AR
CC=$CC
CFLAGS="$CFLAGS -I$GLAD/include"
LDADD="-lz -L$GLAD/lib"
LDFLAGS="$LDFLAGS"
EOF

	./configure
	sed -i -e "/SBINDIR\t\t=/ cSBINDIR\t\t= $GLAD/bin" \
		-e "/MANDIR\t\t=/ cMANDIR\t\t= $GLAD/share/man" \
		Makefile.local

	make
	make install
}
