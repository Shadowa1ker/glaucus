nom=json-c
ver=git
url=https://github.com/$nom/$nom
lic=MIT

prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
