prepare_system() {
  $RSYNC $SRCD/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  sed -e "s/CFLAGS = .*/CFLAGS = $CFLAGS -std=c99 -pedantic -Wall -DVERSION=0.3/" \
    -e "s/LDFLAGS = .*/LDFLAGS = $LDFLAGS/" \
    -i config.mk
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
