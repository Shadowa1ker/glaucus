prepare() {
  install -dv $SBLD/$nom
  cd $SBLD/$nom
}

configure() {
  $CERD/$nom/$nom-$ver/configure \
    --prefix=/usr
}

build() {
  make
}

install() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
