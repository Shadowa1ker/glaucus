prepare_chroot() {
  install -dv $CBLD/$nom
  cd $CBLD/$nom
}

configure_chroot() {
  $CERD/$nom/$nom-$ver/configure \
    --prefix=$TOOL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
