prepare_chroot() {
  install -dv $CBLD/$name
  cd $CBLD/$name
}

configure_chroot() {
  $CERD/$name/$name/configure \
    --prefix=$TOOL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
