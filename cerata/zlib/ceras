version=1.2.11
url=https://zlib.net/zlib-$version.tar.xz
checksum=b7f50ada138c7f93eb7eb1631efccd1d9f03a5e77b6c13c8b757017b2d462e19d2d3e01c50fad60a4ae1bc86d431f6f94c72c11ff410c25121e571953017cb67

build_system () {
	tar xfv $CERD/zlib/zlib-1.2.11.tar.xz -C $TMPD/system/sources

	cd $TMPD/system/sources/zlib-$version
	AR=$AR CC=$CC RANLIB=$RANLIB CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure \
		--prefix=$GLAD \
		--libdir=$GLAD/lib
	make
	make install
}
