name=zlib
version=git
release=1
description='A Massively Spiffy Yet Delicately Unobtrusive Compression Library'
arch=x86_64
url=https://github.com/madler/$name
license='BSLv1.0 ZLIB'

build () {
	cp -arv $CERD/$name/$name $TMPD/system/sources
	mkdir -v $TMPD/system/builds/$name
	cd $TMPD/system/builds/$name
	AR=$AR CC=$CC RANLIB=$RANLIB CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" $TMPD/system/sources/$name/configure \
		--prefix= \
		--shared
	make
	make DESTDIR=$GLAD install
}
