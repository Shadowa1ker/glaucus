prepare_chroot() {
  rsync -vah $CERD/$name/$name $CSRC --delete
  rsync -vah $CERD/gnulib/gnulib $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  ./bootstrap

  ./configure \
    --prefix=$TOOL \
    --host=$TUPL \
    --disable-static
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip
}
