name=svc
version=git
release=1
description='Simple service scripts and examples, to be used everywhere'
arch=x86_64
url=git://git.r-36.net/$name
license=MIT
build () {
        rsync -vah $CERD/$name/$name/bin/$name/ $GLAD/bin/$name/ --delete
        rsync -vah $CERD/$name/$name/$name.d/ $GLAD/bin/$name.d/ --delete
        mkdir -v $GLAD/bin/$name.d/run
        chmod -v 755 $GLAD/bin/$name
}
