name=svc
version=git
release=1
description='Simple service scripts and examples, to be used everywhere'
arch=x86_64
url=git://git.r-36.net/$name
license=MIT

build () {
	cp -rav $CERD/$name/$name/bin/$name $GLAD/bin
	cp -rav $CERD/$name/$name/$name.d $GLAD/bin/$name.d
	mkdir $GLAD/bin/$name.d/run
	chmod 755 $GLAD/bin/$name
}
