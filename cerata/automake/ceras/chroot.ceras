prepare_chroot() {
  rsync -vah $CERD/$name/$name $CSRC --delete
  cd $CSRC/$name
  
  sed 's/ls -/\/usr\/bin\/ls -/' \
    -i lib/mdate-sh
}

configure_chroot() {
  ./bootstrap

  ./configure \
    --prefix=$TOOL \
    --host=$TUPL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip
}
