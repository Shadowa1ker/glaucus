prepare_system() {
  rsync -vah $CERD/$name/Python-$version/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure_system() {
  ax_cv_c_float_words_bigendian=no \
  ./configure \
    --prefix=/usr \
    --enable-optimizations \
    --disable-ipv6 \
    --with-lto \
    --with-system-expat \
    --with-system-ffi \
    --with-pymalloc
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install

  ln -fsv python3 $SCER/$name/sac/usr/bin/python
}
