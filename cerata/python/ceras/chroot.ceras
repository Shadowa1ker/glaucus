prepare_chroot() {
  rsync -vah $CERD/$name/c$name/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  sed '/def add_multiarch_paths/a \        return' \
    -i setup.py

  ax_cv_c_float_words_bigendian=no \
  ./configure \
    --prefix=$TOOL \
    --build=$TUPL \
    --host=$TUPL \
    --enable-optimizations \
    --disable-ipv6 \
    --with-lto \
    --without-ensurepip
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
