prepare_system() {
  $RSYNC $SRCD/$nom/Python-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/patch 1 $nom clear 0001-Fix-$nom-path-for-linux.patch &&
  $SCRD/patch 1 $nom clear 0001-Add-pybench-for-pgo-optimization.patch &&
  $SCRD/patch 1 $nom clear 0001-use-pybench-to-optimize-$nom.patch
}

configure_system() {
  ax_cv_c_float_words_bigendian=no \
  ./configure \
    --prefix=/usr \
    --enable-shared \
    --enable-optimizations \
    --disable-ipv6 \
    --with-lto \
    --with-system-expat \
    --with-system-ffi \
    --with-pymalloc \
    --with-ensurepip
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install &&

  ln -fsv ${nom}3 $SCER/$nom/sac/usr/bin/$nom &&
  ln -fsv pip3.8 $SCER/$nom/sac/usr/bin/pip3
}
