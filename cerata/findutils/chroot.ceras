prepare_chroot() {
  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
}

configure_chroot() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$TUPL \
    --prefix=$TOOL \
    --libexecdir=$TOOL/lib/$nom \
    --disable-nls
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip
}
