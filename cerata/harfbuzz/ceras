name=harfbuzz
version=git
release=1
arch=x86_64
url=https://github.com/$name/$name
cysts='musl freetype'
description='A text shaping engine'
license='Apachev2.0 GPLv2+ GPLv3+ ICU ISC MIT OFLv1.1'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-gtk-doc-html \
                --without-icu
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
