name=pango
version=git
release=1
arch=x86_64
url=https://gitlab.gnome.org/GNOME/$name
cysts='musl libdatrie libthai fribidi glib zlib libpng pixman cairo'
description='A library for layout and rendering of text, with an emphasis on internationalization'
license=LGPLv2+
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        mkdir -v $SBLD/$name
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        LDFLAGS="$LDFLAGS -L$GLAD/usr/lib" \
        LD_LIBRARY_PATH="$GLAD/usr/lib" \
        meson \
                --prefix=/usr \
                -Dgtk_doc=false \
                -Dintrospection=false \
                -Dinstall-tests=false \
                $SBLD/$name
        LD_LIBRARY_PATH="$GLAD/usr/lib" \
        ninja \
                -C $SBLD/$name
        DESTDIR=$SCER/$name/sac \
        ninja \
                -C $SBLD/$name install
}
