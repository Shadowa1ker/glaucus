prepare_chroot() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom &&

  $SCRD/patch 1 $nom alpine fix-build-without-NLS.patch
}

configure_chroot() {
  ./configure \
    --prefix=$TOOL \
    --host=$TUPL \
    --disable-nls
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip
}
