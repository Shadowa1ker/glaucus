prepare_system() {
  $RSYNC $SRCD/$nom/$nom-s$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom

  install -dv $SBLD/$nom
}

configure_system() {
  meson \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --buildtype=release \
    $SBLD/$nom
}

build_system() {
  samu \
    -C $SBLD/$nom
}

install_system() {
  samu \
    -C $SBLD/$nom \
    install
}
