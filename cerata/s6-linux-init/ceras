name=s6-linux-init
version=git
release=1
description=''
arch=x86_64
url=git://git.skarnet.org/$name
license=ISC
build () {
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/ \
                --libexecdir=/lib/libexec \
                --with-sysdeps=$GLAD/lib/skalibs/sysdeps \
                --with-include=$GLAD/include \
                --with-dynlib=$GLAD/lib \
                --enable-shared \
                --disable-static \
                --disable-allstatic
        sed -e "/CFLAGS :=/ cCFLAGS := $CFLAGS -fno-stack-protector" \
                -i config.mak
        make
        make \
                install
}
