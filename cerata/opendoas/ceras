name=opendoas
version=git
release=1
arch=x86_64
url=https://github.com/Duncaen/OpenDoas.$version
cyst='musl byacc'
description='A portable version of the OpenBSD `doas` command'
license='BSDv2 ISC'
build(){
        rsync -vah $CERD/$name/OpenDoas/ $SSRC/$name --delete
        cd $SSRC/$name
        sed -e 's/root/glaucus/' \
                -e 's/-Werror //' \
                -i Makefile
        ./configure \
                --prefix= \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --without-pam
        sed -e 's/\/usr//' \
                -i config.mk
        make
        make \
                DESTDIR=$SCER/$name/sac \
                install
}
