name=opendoas
version=git
release=1
description='A portable version of the OpenBSD `doas` command'
arch=x86_64
url=https://github.com/Duncaen/OpenDoas
license='BSDv2 ISC'
build () {
        rsync -vah $CERD/$name/OpenDoas/ $TMPD/system/sources/$name/ --delete
        cd $TMPD/system/sources/$name
        sed -e 's/root/glaucus/' \
                -e 's/-Werror //' \
                -i Makefile
        CC=$CC \
        CFLAGS="$CFLAGS" \
        LDFLAGS="$LDFLAGS" \
        ./configure
        sed -e 's#/usr##' \
                -i config.mk
        AR=$AR \
        CC=$CC \
        CFLAGS="$CFLAGS" \
        LDFLAGS="$LDFLAGS" \
        make
        make \
                DESTDIR=$GLAD \
                install
}
