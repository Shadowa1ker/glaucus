name=opendoas
version=git
release=1
arch=x86_64
url=https://github.com/Duncaen/OpenDoas
description='A portable version of the OpenBSD `doas` command'
license='BSDv2 ISC'
build(){
        rsync -vah $CERD/$name/OpenDoas/ $SSRC/$name/ --delete
        cd $SSRC/$name
        sed -e 's/root/glaucus/' \
                -e 's/-Werror //' \
                -i Makefile
        ./configure
        sed -e 's/\/usr//' \
                -i config.mk
        make
        make \
                install
        make \
                DESTDIR=$SCER/$name/sac \
                install
}
