name=opendoas
version=git
release=1
description='A portable version of the OpenBSD `doas` command'
arch=x86_64
url=https://github.com/Duncaen/OpenDoas
license='BSDv2 ISC'

build () {
	cp -rav $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	sed -i 's/-Werror //' Makefile
	AR=$AR CC=$CC YACC=$GLAD/bin/yacc CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure
	sed -i 's#/usr##' config.mk
	sed -i 's/root/glaucus/' Makefile
	AR=$AR CC=$CC YACC=$GLAD/bin/yacc CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" make
	AR=$AR CC=$CC YACC=$GLAD/bin/yacc CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" make DESTDIR=$GLAD install
}
