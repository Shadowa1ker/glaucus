name=opendoas
version=git
release=1
arch=x86-64
url=https://$version.duncano.de/$name
cyst='musl byacc'
description='A portable version of the OpenBSD `doas` command'
license='BSDv2 ISC'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        sed -e 's/root/glaucus/' \
                -i Makefile
        ./configure \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --without-pam \
                --with-timestamp
        make
        make DESTDIR=$SCER/$name/sac \
                install
}
