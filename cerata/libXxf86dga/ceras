name=libXxf86dga
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/libxxf86dga
cysts='musl util-macros'
description='Xlib-based library for the XFree86-DGA extension'
license=MIT

prepare_system() {
  rsync -vah $CERD/$name/libxxf86dga/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure_system() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
