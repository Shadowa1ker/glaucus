name=skalibs
version=git
release=1
description=''
arch=x86_64
url=git://git.skarnet.org/$name
license=ISC
build () {
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/ \
                --disable-static \
                --disable-ipv6
        sed -e "/CFLAGS :=/ cCFLAGS := $CFLAGS -fno-stack-protector" \
                -i config.mak
        make
        make \
                install
}
