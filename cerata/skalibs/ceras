name=skalibs
version=git
release=1
arch=x86_64
url=https://$version.skarnet.org/cgi-bin/c$version.cgi/$name
description="skarnet's general purpose C libraries for system programming and small and secure C development"
license=ISC
build(){
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/ \
                --disable-static \
                --disable-ipv6
        sed -e "s/CFLAGS := .*/CFLAGS := $CFLAGS -fno-stack-protector/" \
                -e 's/-Wl,--hash-style=both //' \
                -i config.mak
        make
        make \
                install
}
