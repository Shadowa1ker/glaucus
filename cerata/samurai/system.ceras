prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  :
}

build_system() {
  make \
    CC='cc -std=c99'
}

install_system() {
  make \
    PREFIX=/usr \
    DESTDIR=$SCER/$nom/sac \
    install &&

  ln -fsv samu $SCER/$nom/sac/usr/bin/ninja
}
