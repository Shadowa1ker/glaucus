prepare_system() {
  rsync -vah $CERD/$nom/$nom-$ver/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure_system() {
  :
}

build_system() {
  make \
    CC=cc
}

install_system() {
  make \
    PREFIX=/usr \
    DESTDIR=$SCER/$nom/sac \
    install

  ln -fsv samu $SCER/$nom/sac/usr/bin/ninja
}
