prepare_system() {
  rsync -vah $CERD/$name/$name-$version/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure_system() {
  :
}

build_system() {
  make \
    CC=cc
}

install_system() {
  make \
    PREFIX=/usr \
    DESTDIR=$SCER/$name/sac \
    install

  ln -fsv samu $SCER/$name/sac/usr/bin/ninja
}
