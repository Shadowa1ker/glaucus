prepare_chroot() {
  rsync -vah $CERD/$name/$name-$version/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  sed 's/$(PREFIX)\/man/$(PREFIX)\/share\/man/' \
    -i Makefile
}

build_chroot() {
  make \
    CFLAGS="$CFLAGS -fpic -D_FILE_OFFSET_BITS=64" \
    -f Makefile-libbz2_so

  make \
    clean

  make \
    AR="$AR" \
    RANLIB=$RANLIB \
    CFLAGS="$CFLAGS -fpic -D_FILE_OFFSET_BITS=64" \
    LDFLAGS="$LDFLAGS"
}

install_chroot() {
  #install -dv $TOOL/share/man/man1
  
  make \
    PREFIX=$TOOL \
    install
}
