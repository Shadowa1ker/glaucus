name=bzip2
version=git
release=1
arch=x86-64
url=$version://sourceware.org/$version/$name
cyst=musl
description='A freely available, patent free, high-quality data compressor'
license=BSDv3

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  sed 's/$(PREFIX)\/man/$(PREFIX)\/share\/man/' \
    -i Makefile
}

build_system() {
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS -fpic -D_FILE_OFFSET_BITS=64" \
    -f Makefile-libbz2_so

  make \
    clean

  make \
    AR=$AR \
    CC="$CC" \
    RANLIB=$RANLIB \
    CFLAGS="$CFLAGS -fpic -D_FILE_OFFSET_BITS=64" \
    LDFLAGS="$LDFLAGS"
}

install_system() {
  install -dv $SCER/$name/sac/usr/share/man/man1
  make \
    PREFIX=$SCER/$name/sac/usr \
    install
}
