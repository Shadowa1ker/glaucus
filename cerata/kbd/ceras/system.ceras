prepare_system() {
  rsync -vah $CERD/$name/$name-$version/ $SSRC/$name --delete
  cd $SSRC/$name

  patch -p1 -i $CERD/$name/patches/$name.patch

  sed 's/\(RESIZECONS_PROGS=\)yes/\1no/' \
    -i configure
  sed 's/resizecons.8 //' \
    -i docs/man/man8/Makefile.in
}

configure_system() {
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-nls \
    --disable-vlock \
    --disable-tests
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
