nom=minised
ver=svn
url=https://svn.exactcode.de/minised/trunk
lic=

prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  ./configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL
}

build_system() {
  make
}

install_system() {
  make DESTDIR=$SCER/$nom/sac \
    install-strip
}
