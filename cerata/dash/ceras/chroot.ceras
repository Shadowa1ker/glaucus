# prepare
rsync -vah $CERD/$name/$name $CSRC --delete
cd $CSRC/$name

# configure
./autogen.sh
./configure \
  --prefix=$TOOL \
  --host=$TUPL \
  --disable-static

# build
make

# install
make \
  install-strip

ln -fsv $name $TOOL/bin/sh
