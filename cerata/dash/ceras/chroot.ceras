prepare_chroot() {
  rsync -vah $CERD/$name/$name $CSRC --delete --exclude=.$version
  cd $CSRC/$name
}

configure_chroot() {
  ./autogen.sh

  ./configure \
    --prefix=$TOOL \
    --host=$TUPL \
    --disable-static
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip

  ln -fsv $name $TOOL/bin/sh
}
