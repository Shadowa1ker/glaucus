# prepare
rsync -vah $CERD/$name/$name $CSRC --delete
cd $CSRC/$name

# configure
./autogen.sh
./configure \
  --prefix=$GLCD \
  --build=$TUPL \
  --host=$TUPL \
  --target=$TUPL \
  --disable-static

# build
make

# install
make \
  install-strip

cd $GLCD/bin
ln -fsv $name sh
