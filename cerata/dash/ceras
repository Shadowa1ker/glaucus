name=dash
version=git
release=1
arch=x86_64
url=https://$version.kernel.org/pub/scm/utils/$name/$name.$version
cysts='musl mawk'
description='The Debian Almquist shell is a POSIX-compliant shell derived from the NetBSD Almquist shell'
license='BSDv3 GPLv2 PD'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh
        ./configure \
                --prefix= \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        install -dv $SCER/$name/sac/bin
        make \
                DESTDIR=$SCER/$name/sac \
                install-strip
        cd $SCER/$name/sac/bin
        ln -fsv $name sh
}
