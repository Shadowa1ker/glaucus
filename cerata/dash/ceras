name=dash
version=git
release=1
arch=x86-64
url=https://$version.kernel.org/pub/scm/utils/$name/$name
cysts='musl mawk'
description='The Debian Almquist shell is a POSIX-compliant shell derived from the NetBSD Almquist shell'
cluster=core
licenses='BSDv3 GPLv2+ PD'

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build(){
  make
}

install_system() {
  install -dv $SCER/$name/sac/usr/bin
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip

  cd $SCER/$name/sac/usr/bin
  ln -fsv $name sh
}
