name=dash
version=git
release=1
description='The Debian Almquist shell is a POSIX-compliant shell derived from the NetBSD Almquist shell'
arch=x86_64
url=git://git.kernel.org/pub/scm/utils/$name/$name.git
license=BSDv3

build () {
	cp -rav $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	./autogen.sh
	AWK=$GLAD/bin/mawk CC=$CC STRIP=$STRIP CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure \
		--prefix= \
		--disable-static
	make
	make DESTDIR=$GLAD install-strip
	cd $GLAD/bin
	ln -sfv $name sh
}
