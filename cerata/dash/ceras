name=dash
ver=git
rel=1
desc='The Debian Almquist Shell is a POSIX-compliant shell derived from the NetBSD Almquist Shell'
arch=x86_64
url=git://git.kernel.org/pub/scm/utils/$name/$name.git
lic=BSD

build () {
	cp -rav $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	./autogen.sh
	./configure CC=$CC CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" --prefix=$GLAD --host=$TRPL --disable-static
	make
	make install-strip
	cd $GLAD/bin
	ln -sfv $name sh
}
