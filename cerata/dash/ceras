version=git
url=git://git.kernel.org/pub/scm/utils/dash/dash.git

build_system () {
	cp -rav $CERD/dash/dash $TMPD/system/sources

	cd $TMPD/system/sources/dash
	./autogen.sh
	./configure CC=$CC CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" --prefix=$GLAD --host=$TRPL --disable-static

	make
	make install-strip

	cd $GLAD/bin
	ln -sfv dash sh
}
