name=dash
version=git
release=1
description='The Debian Almquist shell is a POSIX-compliant shell derived from the NetBSD Almquist shell'
arch=x86_64
url=git://git.kernel.org/pub/scm/utils/$name/$name.git
license='BSDv3 GPLv2 PD'
build () {
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        ./autogen.sh
        ./configure \
                --prefix= \
                --disable-static
        make
        make \
                install-strip
        cd $GLAD/bin
        ln -fsv $name sh
}
