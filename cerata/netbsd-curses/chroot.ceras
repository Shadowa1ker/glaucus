prepare_chroot() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom
}

configure_chroot() {
  printf "PREFIX = $TOOL
AR = $AR
RANLIB = $RANLIB\n" > config.mak &&

  sed 's/-O0 //' \
    -i GNUmakefile
}

build_chroot() {
  make \
    all-dynamic
}

install_chroot() {
  make \
    install-dynamic
}
