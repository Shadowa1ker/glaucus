prepare_chroot() {
  rsync -vah $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete
  cd $CSRC/$nom
}

configure_chroot() {
  cat > config.mak << EOF
PREFIX = $TOOL
AR = $AR
RANLIB = $RANLIB
EOF

  sed 's/-O0 //' \
    -i GNUmakefile
}

build_chroot() {
  make \
    all-dynamic
}

install_chroot() {
  make \
    install-dynamic
}
