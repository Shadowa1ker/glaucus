name=netbsd-curses
version=git
release=1
arch=x86_64
url=https://github.com/sabotage-linux/$name
cyst=musl
description="A port of NetBSD's curses library for usage on Linux systems"
license='BSDv3 BSDv2'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
cat > config.mak << EOF
PREFIX = 
AR = $AR
AWK = $AWK
CC = $CC
RANLIB = $RANLIB
CFLAGS = $CFLAGS
LDFLAGS = $LDFLAGS
EOF
        sed -e 's/-O0 //' \
                -i GNUmakefile
        make \
                all-dynamic
        make \
                DESTDIR=$SCER/$name/sac \
                install-dynamic
        $STRIP -v $SCER/$name/sac/lib/libcurses.so \
                $SCER/$name/sac/lib/libform.so \
                $SCER/$name/sac/lib/libmenu.so \
                $SCER/$name/sac/lib/libpanel.so \
                $SCER/$name/sac/lib/libterminfo.so
}
