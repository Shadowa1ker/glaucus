name=netbsd-curses
version=git
release=1
arch=x86-64
url=https://github.com/sabotage-linux/$name
cyst=musl
description="A port of NetBSD's curses library for usage on Linux systems"
cluster=core
licenses='BSDv2 BSDv3'

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  cat > config.mak << EOF
PREFIX = /usr
AR = $AR
AWK = $AWK
CC = $CC
RANLIB = $RANLIB
CFLAGS = $CFLAGS
LDFLAGS = $LDFLAGS
EOF

  # Prevent NetBSD clear from overwriting ubase's clear
  sed -e '/$(BINDIR)\/clear/ s/$/.sh/' \
    -e 's/-O0 //' \
    -i GNUmakefile
}

build_system() {
  make \
    all-dynamic
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-dynamic

  cd $SCER/$name/sac/usr/lib
  $STRIP -v libcurses.so libform.so libmenu.so libpanel.so libterminfo.so
}
