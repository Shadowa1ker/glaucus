name=netbsd-curses
version=git
release=1
arch=x86-64
url=https://github.com/sabotage-linux/$name
cyst=musl
description="A port of NetBSD's curses library for usage on Linux systems"
cluster=core
licenses='BSDv3 BSDv2'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
cat > config.mak << EOF
PREFIX = /usr
AR = $AR
AWK = $AWK
CC = $CC
RANLIB = $RANLIB
CFLAGS = $CFLAGS
LDFLAGS = $LDFLAGS
EOF
        sed -e '/$(BINDIR)\/clear/ s/$/.sh/' \
                -e 's/-O0 //' \
                -i GNUmakefile
        make all-dynamic
        make DESTDIR=$SCER/$name/sac \
                install-dynamic
        $STRIP -v $SCER/$name/sac/usr/lib/libcurses.so \
                $SCER/$name/sac/usr/lib/libform.so \
                $SCER/$name/sac/usr/lib/libmenu.so \
                $SCER/$name/sac/usr/lib/libpanel.so \
                $SCER/$name/sac/usr/lib/libterminfo.so
}
