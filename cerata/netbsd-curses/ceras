name=netbsd-curses
version=git
release=1
description="A port of NetBSD's curses library for usage on Linux systems"
arch=x86_64
url=https://github.com/sabotage-linux/$name
license='BSDv3 BSDv2'
build () {
        rsync -vah $CERD/$name/$name/ $TMPD/system/sources/$name/ --delete
        cd $TMPD/system/sources/$name
cat > config.mak << EOF
PREFIX = 
AR = $AR
AWK = $AWK
CC = $CC
RANLIB = $RANLIB
CFLAGS = $CFLAGS
LDFLAGS = $LDFLAGS
EOF
        make \
                all-dynamic
        make \
                DESTDIR=$GLAD \
                install-dynamic
        $STRIP -v $GLAD/lib/libcurses.so \
                $GLAD/lib/libform.so \
                $GLAD/lib/libmenu.so \
                $GLAD/lib/libpanel.so \
                $GLAD/lib/libterminfo.so
}
