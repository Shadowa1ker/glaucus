name=netbsd-curses
version=git
release=1
description="A port of NetBSD's curses library for usage on Linux systems"
arch=x86_64
url=https://github.com/sabotage-linux/$name
license='BSDv3 BSDv2'

build () {
	cp -rav $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
cat > config.mak << EOF
PREFIX = 
CC = $CC
CFLAGS = $CFLAGS
LDFLAGS = $LDFLAGS
EOF
	make all-dynamic
	make DESTDIR=$GLAD install-dynamic
	$STRIP -v $GLAD/lib/libcurses.so \
		$GLAD/lib/libform.so \
		$GLAD/lib/libmenu.so \
		$GLAD/lib/libpanel.so \
		$GLAD/lib/libterminfo.so
}
