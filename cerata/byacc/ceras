version=20180609
url=ftp://ftp.invisible-island.net/byacc/byacc-$version.tgz

build_system () {
	tar xfv $CERD/byacc/byacc-$version.tgz -C $TMPD/system/sources

	cd $TMPD/system/sources/byacc-$version
	./configure --prefix=$GLAD \
		CC=$CC \
		CFLAGS="$CFLAGS" \
		LDFLAGS="$LDFLAGS"
	make
	make install
}
