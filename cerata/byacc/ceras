version=20180609
url=ftp://ftp.invisible-island.net/byacc/byacc-$version.tgz
checksum=45aa6de839ca23385ab832685fdaa49225dcde6a40bdb990eefde8ab1be2cfe063875072e844629ac91e9533e6e310fa0bb8a6bd01e246a1cefc67bbc3c175f9

build_system () {
	tar xfv $CERD/byacc/byacc-$version.tgz -C $TMPD/system/sources

	cd $TMPD/system/sources/byacc-$version
	./configure --prefix=$GLAD \
		CC=$CC \
		CFLAGS="$CFLAGS" \
		LDFLAGS="$LDFLAGS"
	make
	make install
}
