# prepare
install -dv $CBLD/$name && cd $CBLD/$name

# configure
$CERD/$name/$name/configure \
  --prefix=$TOOL \
  --program-prefix=b \
  --host=$TUPL

# build
make

# install
make \
  install

# for compatibility purposes
ln -fsv $name $TOOL/bin/yacc
