# prepare
install -dv $CBLD/$name && cd $CBLD/$name

# configure
$CERD/$name/$name/configure \
  --prefix=$GLCD \
  --program-prefix=b \
  --build=$TUPL \
  --host=$TUPL \
  --target=$TUPL

# build
make

# install
make \
  install

# for compatibility purposes
ln -fsv $name $GLCD/bin/yacc
