prepare_system() {
  install -dv $SBLD/$name
  cd $SBLD/$name
}

configure_system() {
  $CERD/$name/$name-$version/configure \
    --prefix=/usr \
    --program-prefix=b
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install

  ln -fsv $name $SCER/$name/sac/usr/bin/yacc
}
