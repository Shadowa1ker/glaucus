prepare() {
  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom &&
  
  $RSYNC $SRCD/$nom/$nom-$ver/man . --delete
}

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$TUPL \
    --prefix=$TOOL \
    --without-man2html
}

build() {
  make
}

install() {
  make \
    install &&

  $LN $nom $TOOL/bin/awk
}
