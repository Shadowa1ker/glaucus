prepare_chroot() {
  rsync -vah $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete
  cd $CSRC/$nom
}

configure_chroot() {
  CFLAGS="$CFLAGSNOOPENMP" \
  ./configure \
    --prefix=$TOOL \
    --host=$TUPL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install

  ln -fsv $nom $TOOL/bin/awk
}
