prepare_chroot() {
  install -dv $CBLD/$nom
  cd $CBLD/$nom
  
  $RSYNC $SRCD/$nom/$nom-$ver/man . --delete
}

configure_chroot() {
  CFLAGS="$CFLAGSNOOPENMP" \
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=$TOOL \
    --host=$TUPL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install

  ln -fsv $nom $TOOL/bin/awk
}
