prepare_chroot() {
  rsync -vah $CERD/$name/$name-snapshots/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  CFLAGS="$CFLAGSNOOPENMP" \
  ./configure \
    --prefix=$TOOL \
    --host=$TUPL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install

  ln -fsv $name $TOOL/bin/awk
}
