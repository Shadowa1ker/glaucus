name=mawk
version=git
release=1
description='An interpreter for the AWK Programming Language faster than gawk'
arch=x86_64
url=https://github.com/ThomasDickey/$name-snapshots
license=GPLv2

build () {
	mkdir -v $TMPD/system/builds/$name
	cd $TMPD/system/builds/$name
	$CERD/$name/$name-snapshots/configure --prefix= \
		CC=$CC \
		CFLAGS="$CFLAGS" \
		LDFLAGS="$LDFLAGS"
	cp -arv $CERD/$name/$name-snapshots/man $TMPD/system/builds/$name
	make
	make DESTDIR=$GLAD install
	cd $GLAD/bin
	ln -fsv $name awk
}
