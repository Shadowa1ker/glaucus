name=mawk
version=git
release=1
arch=x86_64
url=https://github.com/ThomasDickey/$name-snapshots.$version
cyst=musl
description='An interpreter for the AWK Programming Language faster than gawk'
license=GPLv2
build(){
        if [ ! -d $SBLD/$name ]
        then
                mkdir -v $SBLD/$name
        fi
        cd $SBLD/$name
        $CERD/$name/$name-snapshots/configure \
                --prefix= \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL
        rsync -vah $CERD/$name/$name-snapshots/man . --delete
        make
        make \
                DESTDIR=$SCER/$name/sac \
                install
        cd $SCER/$name/sac/bin
        ln -fsv $name awk
}
