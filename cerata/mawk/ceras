name=mawk
version=git
release=1
description='An interpreter for the AWK Programming Language faster than gawk'
arch=x86_64
url=https://github.com/ThomasDickey/$name-snapshots
license=GPLv2
build () {
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $CERD/$name/$name-snapshots/configure \
                --prefix=
        cp -arv $CERD/$name/$name-snapshots/man $SBLD/$name
        make
        make \
                install
        cd $GLAD/bin
        ln -fsv $name awk
}
