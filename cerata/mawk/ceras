name=mawk
version=git
release=1
arch=x86_64
url=https://github.com/ThomasDickey/$name-snapshots
description='An interpreter for the AWK Programming Language faster than gawk'
license=GPLv2
build(){
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $CERD/$name/$name-snapshots/configure \
                --prefix=
        rsync -vah $CERD/$name/$name-snapshots/man . --delete
        make
        make \
                install
        make \
                DESTDIR=$SCER/$name/venom \
                install
        cd $SCER/$name/venom
        sha512sum $(tar cJvf ../$name-$version-$release-$arch.tar.xz .) > ../checksum
        sed -e 's/.\//\//' \
                -i ../checksum
        cd $GLAD/bin
        ln -fsv $name awk
}
