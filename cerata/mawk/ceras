name=mawk
version=git
release=1
description='An interpreter for the AWK Programming Language faster than gawk'
arch=x86_64
url=https://github.com/ThomasDickey/$name-snapshots
license=GPLv2

build () {
	cp -rav $CERD/$name/$name-snapshots $TMPD/system/sources/$name
	mkdir -v $TMPD/system/builds/$name
	cd $TMPD/system/builds/$name
	$TMPD/system/sources/$name/configure --prefix= \
		CC=$CC \
		CFLAGS="$CFLAGS" \
		LDFLAGS="$LDFLAGS"
	make
	make DESTDIR=$GLAD install
	cd $GLAD/bin
	ln -fsv $name awk
}
