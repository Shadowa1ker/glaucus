prepare_system() {
  rsync -vah $CERD/$name/$name-$version/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure_system() {
  CFLAGS="$CFLAGSNOOPENMP" \
  ./configure \
    --prefix=/usr
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install

  ln -fsv $name $SCER/$name/sac/usr/bin/awk
}
