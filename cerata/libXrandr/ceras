name=libXrandr
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/libxrandr
cysts='musl util-macros'
description='Xlib Resize, Rotate and Reflection (RandR) extension library'
license=MIT

prepare() {
  rsync -vah $CERD/$name/libxrandr/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build() {
  make
}

install() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
