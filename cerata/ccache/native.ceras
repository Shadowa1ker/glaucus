prepare_cross() {
  install -dv $NBLD/$nom &&
  cd $NBLD/$nom
}

configure_cross() {
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=$TOOL \
    --bindir=$TOOL/bin/$nom \
    --host=$TUPL \
    --target=$TUPL
}

build_cross() {
  make
}

install_cross() {
  make \
    install &&

  for i in c++ cc g++ gcc; do
    ln -fsv $nom $TOOL/bin/$nom/$i
  done
}
