name=libXft
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libxft
cyst=musl
description='X FreeType library'
license=MIT
build(){
        rsync -vah $CERD/$name/libxft/ $SSRC/$name --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
