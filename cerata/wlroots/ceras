name=wlroots
version=git
release=1
arch=x86-64
url=https://github.com/swaywm/$name
cysts='musl expat libffi wayland-protocols wayland zlib-ng libpng'
description='A modular Wayland compositor library'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
