nom=libxcb
ver=git
url=https://gitlab.freedesktop.org/xorg/lib/$nom
lic=MIT

prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  sed 's/pthread-stubs //' \
    -i configure.ac

  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  NEEDED_CFLAGS=-I$GLAD/usr/include \
  NEEDED_LIBS="-L$GLAD/usr/lib -lXau" \
  XCBPROTO_CFLAGS=-I$GLAD/usr/include \
  XCBPROTO_LIBS=-L$GLAD/usr/lib \
  XDMCP_CFLAGS=-I$GLAD/usr/include \
  XDMCP_LIBS="-L$GLAD/usr/lib -lXdmcp" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static \
    --disable-devel-docs \
    --enable-dri3 \
    --without-doxygen \
    --without-launchd
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
