prepare() {
  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
}

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$TUPL \
    --prefix=$TOOL \
    --disable-debug \
    --without-included-zlib
}

build() {
  $MAKE
}

install() {
  $MAKE \
    install-strip
}
