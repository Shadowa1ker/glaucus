name=libXtst
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/libxtst
cysts='musl util-macros'
description='Xlib-based library for XTEST & RECORD extensions'
license=MIT
build(){
        rsync -vah $CERD/$name/libxtst/ $SSRC/$name --delete
        cd $SSRC/$name
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-specs \
                --without-xmlto \
                --without-fop \
                --without-xsltproc
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
