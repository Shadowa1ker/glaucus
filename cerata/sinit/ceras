version=git
url=git://git.suckless.org/sinit

build_system () {
	cp -rav $CERD/sinit/sinit $TMPD/system/sources
	cd $TMPD/system/sources/sinit

	sed -i s/-static// config.mk

	sed -i -e "/PREFIX =/ cPREFIX = $GLAD" \
		-e "/CC =/ cCC = $CC" \
		-e "/CFLAGS   =/ cCFLAGS = $CFLAGS -Wall -Wextra" \
		-e "/LDFLAGS  =/ cLDFLAGS = $LDFLAGS" \
		-e s/-static// \
		config.mk

	make
	make install
}
