name=pkg-config
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/$name/$name
cyst=musl
description='A script to make putting together all the build flags when compiling/linking a lot easier'
licenses='GPLv2+ ISC LGPLv2.0+ LGPLv2.1+'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
