name=libdatrie
version=git
release=1
arch=x86-64
url=https://github.com/tlwg/$name
cyst=musl
description='An implementation of double-array structure for representing trie,
as proposed by Junichi Aoe'
license=LGPLv2.1+

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure_system() {
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
