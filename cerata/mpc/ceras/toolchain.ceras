# prepare
rsync -vah $CERD/$name/$name $TSRC --delete --exclude=.$version
cd $TSRC/$name

# configure
autoreconf -vfi
./configure \
  --prefix=$TOOL \
  --host=$TUPL \
  --target=$TUPL \
  --disable-static \
  --with-mpfr=$TOOL \
  --with-gmp=$TOOL

# build
make

# install
make \
  install-strip
