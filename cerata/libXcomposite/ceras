name=libXcomposite
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/libxcomposite
cysts='musl util-macros'
description='Xlib-based client library for the Composite extension to the X11
protocol'
license=MIT

prepare_system() {
  rsync -vah $CERD/$name/libxcomposite/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure_system() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static \
    --without-xmlto
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
