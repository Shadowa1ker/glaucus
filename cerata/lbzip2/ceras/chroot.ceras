prepare_chroot() {
  rsync -vah $CERD/$name/$name-$version/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  ./configure \
    --prefix=$TOOL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip

  ln -fsv $name $TOOL/bin/bzip2
  ln -fsv $name $TOOL/bin/bunzip2
  ln -fsv $name $TOOL/bin/bzcat
}
