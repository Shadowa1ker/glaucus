prepare_chroot() {
  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
}

configure_chroot() {
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=$TOOL
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install-strip &&

  $LN $nom $TOOL/bin/bunzip2 &&
  $LN $nom $TOOL/bin/bzcat &&
  $LN $nom $TOOL/bin/bzip2
}
