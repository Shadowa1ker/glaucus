prepare() {
  cd $TSRC/$nom
} &&

configure() {
  sed -e "s/CC = gcc/CC = $XTGT-gcc/" \
    -e "s/LIBCC =  /LIBCC = $MCARCH/" \
    -i config.mak
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    DESTDIR=$CRSD \
    install-libs \
    install-tools &&

  $LN libc.so $CRSD/usr/lib/ld-musl-$MARCH.so.1
}
