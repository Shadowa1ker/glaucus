prepare_native() {
  install -dv $NBLD/$nom
  cd $NBLD/$nom
}

configure_native() {
  CROSS_COMPILE=$TUPL- \
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=$TOOL \
    --syslibdir=$TOOL/lib \
    --target=$TUPL

  $RSYNC $SRCD/$nom/$nom-$ver/Makefile .

  sed 's/ $(libdir)\/libc.so/ libc.so/' \
    -i Makefile
}

build_native() {
  make
}

install_native() {
  make \
    install
}
