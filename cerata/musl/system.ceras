prepare() {
  $MKDIR $SBLD/$nom &&
  cd $SBLD/$nom
}

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    CFLAGS="$($SCRD/classify atlanticus "$CFLAGSNOFPMATHNOLTO" "$CFLAGSNOLTO")" \
    --prefix=/usr \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static &&

  $RSYNC $SRCD/$nom/$nom-$ver/Makefile . &&

  $SCRD/patch 0 $nom glaucus 0001-remove-libdir
}

build() {
  make
}

install() {
  make \
    install &&

  $RSYNC $CERD/$nom/ld-$nom-$_ARCH.path.system /etc/ld-$nom-$_ARCH.path &&

  $RSYNC $CERD/$nom/ldconfig /usr/bin &&

  $LN ../lib/ld-$nom-$_ARCH.so.1 /usr/bin/ldd &&

  $RM /usr/include/utmp.h &&
  $RM /usr/include/utmpx.h
}
