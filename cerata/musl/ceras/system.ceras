prepare_system() {
  install -dv $SBLD/$name
  cd $SBLD/$name
}

configure_system() {
  $CERD/$name/$name/configure \
    CFLAGS="$CFLAGSNOLTO" \
    --prefix=/usr \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static

  rm -fv Makefile
  install -v $CERD/$name/$name/Makefile .

  sed 's/ $(libdir)\/libc.so/ libc.so/' \
    -i Makefile
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-libs

  install -dv $SCER/$name/sac/usr/bin
  ln -fsv ../lib/ld-$name-$ARCH.so.1 $SCER/$name/sac/usr/bin/ldd

  echo /usr/lib > $SCER/$name/sac/etc/ld-$name-$ARCH.path
}
