version=git
url=https://github.com/Duncaen/lobase

build_system () {
	cp -rav $CERD/lobase/lobase $TMPD/system/sources

	cd $TMPD/system/sources/lobase
	autoreconf -fi
	AR=$AR CC=$CC RANLIB=$RANLIB CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure --prefix=
	cd lib/libopenbsd
	make
	cd ../liboutil
	make
	cd ../../usr.bin/diff
	make
	make DESTDIR=$GLAD/bin/ install
	cd ../fmt
	make
	make DESTDIR=$GLAD/bin/ install
	cd ../patch
	make
	make DESTDIR=$GLAD/bin/ install
	cd ../sort
	make
	make DESTDIR=$GLAD/bin/ install
	cd ../../bin/ls
	make
	make DESTDIR=$GLAD/bin/ install
	cd ../pax
	make
	make DESTDIR=$GLAD/bin/ install

	mv -v $GLAD/bin/share/man/man1/* $GLAD/share/man/man1
	rm -rfv $GLAD/bin/share
}
