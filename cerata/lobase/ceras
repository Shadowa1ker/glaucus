name=lobase
version=git
release=1
description='A port of the OpenBSD userland to Linux'
arch=x86_64
url=https://github.com/Duncaen/$name.git/
license='ISC PD'

build () {
	cp -arv $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	sed -e 's/${DESTDIR}//' \
		-e 's/$$s//' \
		-e '10d' \
		-i mk/bsd.man.mk
	autoreconf -vfi
	AR=$AR CC=$CC RANLIB=$RANLIB CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure \
		--prefix=
	cd lib/libopenbsd
	make
	cd ../liboutil
	make
	cd ../../usr.bin/diff
	make
	make DESTDIR=$GLAD BINDIR=/bin MANDIR=$GLAD/share/man/man1 install
	cd ../fmt
	make
	make DESTDIR=$GLAD BINDIR=/bin MANDIR=$GLAD/share/man/man1 install
	cd ../patch
	make
	make DESTDIR=$GLAD BINDIR=/bin MANDIR=$GLAD/share/man/man1 install
	cd ../sort
	make
	make DESTDIR=$GLAD BINDIR=/bin MANDIR=$GLAD/share/man/man1 install
	cd ../../bin/ls
	make
	make DESTDIR=$GLAD BINDIR=/bin MANDIR=$GLAD/share/man/man1 install
	cd ../pax
	make
	install -v pax $GLAD/bin
	cd $GLAD/bin
	ln -fsv pax cpio
	ln -fsv pax tar
	cd $TMPD/system/sources/$name/bin/pax
	install -vm 444 cpio.1 $GLAD/share/man/man1
	install -vm 444 pax.1 $GLAD/share/man/man1
	install -vm 444 tar.1 $GLAD/share/man/man1
	cd ../stty
	make
	make DESTDIR=$GLAD BINDIR=/bin MANDIR=$GLAD/share/man/man1 install
}
