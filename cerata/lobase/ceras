name=lobase
version=git
release=1
description='A port of the OpenBSD userland to Linux'
arch=x86_64
url=https://github.com/Duncaen/$name.git/
license='ISC PD'
build () {
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        sed -e 's/${DESTDIR}//' \
                -e 's/$$s//' \
                -e '10d' \
                -i mk/bsd.man.mk
        autoreconf -vfi
        ./configure \
                --prefix=
        cd lib/libopenbsd
        make
        cd ../liboutil
        make
        cd ../../usr.bin/diff
        make
        make \
                BINDIR=/bin \
                MANDIR=$GLAD/share/man/man1 \
                install
        cd ../fmt
        make
        make \
                BINDIR=/bin \
                MANDIR=$GLAD/share/man/man1 \
                install
        cd ../patch
        make
        make \
                BINDIR=/bin \
                MANDIR=$GLAD/share/man/man1 \
                install
        cd ../sort
        make
        make \
                BINDIR=/bin \
                MANDIR=$GLAD/share/man/man1 \
                install
        cd ../../bin/ls
        make
        make \
                BINDIR=/bin \
                MANDIR=$GLAD/share/man/man1 \
                install
        cd ../pax
        make
        install -v pax $GLAD/bin
        cd $GLAD/bin
        ln -fsv pax cpio
        ln -fsv pax tar
        cd $SSRC/$name/bin/pax
        install -vm 444 cpio.1 $GLAD/share/man/man1
        install -vm 444 pax.1 $GLAD/share/man/man1
        install -vm 444 tar.1 $GLAD/share/man/man1
        cd ../stty
        make
        make \
                BINDIR=/bin \
                MANDIR=$GLAD/share/man/man1 \
                install
}
