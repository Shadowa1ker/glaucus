name=libICE
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libice
cyst=musl
description='Inter-Client Exchange Library'
license=
build(){
        rsync -vah $CERD/$name/libice $SSRC/$name --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-docs \
                --disable-specs \
                --disable-ipv6 \
                --without-xmlto \
                --without-fop \
                --without-xsltproc
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
