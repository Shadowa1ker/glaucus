nom=libthai
ver=git
url=https://github.com/tlwg/$nom
lic=LGPLv2.1+

prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  ./autogen.sh
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
