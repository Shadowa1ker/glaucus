prepare_cross() {
  rsync -vah $CERD/$name/$name $TSRC --delete
  cd $TSRC/$name
}

configure_cross() {
  ./.bootstrap
  
  ./configure \
    --prefix=$TOOL \
    --enable-cxx \
    --disable-static
}

build_cross() {
  make
}

install_cross() {
  make \
    install-strip
}
