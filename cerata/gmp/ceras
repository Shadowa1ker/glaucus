name=gmp
version=hg
release=1
arch=x86-64
url=https://gmplib.org/repo/$name
description='A free library for arbitrary multiprecision arithmetic, operating on signed integers, rational numbers, and floating-point numbers'
license='GPLv2 LGPLv3 PD'
build_cross(){
        rsync -vah $CERD/$name/$name/ $CSRC/$name --delete
        cd $CSRC/$name
        ./.bootstrap
        ./configure \
                --prefix=$CRSL \
                --disable-static \
                --enable-cxx
        make
        make install
}
build_toolchain(){
        rsync -vah $CERD/$name/$name/ $TSRC/$1 --delete
        cd $TSRC/$1
        ./.bootstrap
        case $1 in 
                gmp_1)
                        ./configure \
                                --prefix=$TOOL \
                                --disable-static \
                                --enable-cxx
                        ;;
                gmp_2)
                        AR=$TUPL-ar \
                        AS=$TUPL-as \
                        CC=$TUPL-gcc \
                        CXX=$TUPL-g++ \
                        LD=$TUPL-ld \
                        NM=$TUPL-nm \
                        OBJCOPY=$TUPL-objcopy \
                        OBJDUMP=$TUPL-objdump \
                        RANLIB=$TUPL-ranlib \
                        READELF=$TUPL-readelf \
                        SIZE=$TUPL-size \
                        STRINGS=$TUPL-strings \
                        STRIP=$TUPL-strip \
                        ./configure \
                                --prefix=$TOOL \
                                --disable-static \
                                --enable-cxx
                        ;;
        esac
        make
        make install
}
build(){
        :
}
