nom=libnl-tiny
ver=git
url=https://github.com/sabotage-linux/$nom
lic=LGPLv2.1

prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  cat > config.mak << EOF
prefix=/usr
AR=$AR
CC=$CC
RANLIB=$RANLIB
CFLAGS=$CFLAGS
CPPFLAGS=$CPPFLAGS
LDFLAGS=$LDFLAGS
EOF

sed 's/ $(STATICLIB)//' \
    -i Makefile
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
