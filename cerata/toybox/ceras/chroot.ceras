prepare_chroot() {
  rsync -vah $CERD/$name/$name $CSRC --delete
  cd $CSRC/$name
  
  install -v $CERD/$name/glaucus.config .config
}

configure_chroot() {
  scripts/genconfig.sh
}

build_chroot() {
  make
}

install_chroot() {
  LD_LIBRARY_PATH=$TOOL/lib \
  make \
    PREFIX=$TOOL \
    install
}
