prepare_chroot() {
  rsync -vah $CERD/$name/$name $SSRC --delete --exclude=.$version
  cd $SSRC/$name
  
  install -v $CERD/$name/glaucus.config .config
}

configure_chroot() {
  scripts/genconfig.sh
}

build_chroot() {
  make
}

install_chroot() {
  make \
    PREFIX=$SCER/$name/sac \
    install
}
