name=libarchive
version=git
release=1
description='Multi-format archive and compression library'
arch=x86_64
url=https://github.com/$name/$name
license=BSDv3
build () {
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        autoreconf -vfi
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix= \
                --disable-static \
                --disable-bsdtar \
                --disable-acl \
                --without-zstd \
                --without-cng \
                --without-nettle \
                --without-openssl \
                --without-xml2 \
                --without-expat
        make
        make \
                install-strip
}
