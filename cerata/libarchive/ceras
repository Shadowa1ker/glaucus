version=3.3.3
url=https://www.libarchive.org/downloads/libarchive-$version.tar.gz
release=1

build_system () {
	tar xfv $CERD/libarchive/libarchive-$version.tar.gz -C $TMPD/system/sources

	cd $TMPD/system/sources/libarchive-$version
	AR=$AR AS=$AS AWK=$GLAD/bin/mawk CC=$CC OBJDUMP=$OBJDUMP RANLIB=$RANLIB STRIP=$STRIP CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" ./configure \
		--prefix= \
		--disable-static \
		--disable-bsdtar \
		--disable-acl \
		--without-zstd \
		--without-cng \
		--without-nettle \
		--without-openssl \
		--without-xml2 \
		--without-expat
	make
	make DESTDIR=$GLAD install
}
