name=libarchive
version=git
release=1
description='Multi-format archive and compression library'
arch=x86_64
url=https://github.com/$name/$name
license=BSDv3

build () {
	tar xvf $CERD/$name/$name-$version.tar.gz -C $TMPD/system/sources
	cp -rav $CERD/$name/$name $TMPD/system/sources
	mkdir -v $TMPD/system/builds/$name
	cd $TMPD/system/builds/$name
	AR=$AR AS=$AS AWK=$GLAD/bin/mawk CC=$CC OBJDUMP=$OBJDUMP RANLIB=$RANLIB STRIP=$STRIP CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" $TMPD/system/sources/$name/configure \
		--prefix= \
		--disable-static \
		--disable-bsdtar \
		--disable-acl \
		--without-zstd \
		--without-cng \
		--without-nettle \
		--without-openssl \
		--without-xml2 \
		--without-expat
	make
	make DESTDIR=$GLAD install
}
