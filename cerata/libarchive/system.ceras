prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/patch 1 $nom void filter-xz-enable-threads.patch
}

configure_system() {
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-acl \
    --without-cng \
    --without-nettle \
    --without-xml2
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip &&

  ln -fsv bsdcpio $SCER/$nom/sac/usr/bin/cpio &&
  ln -fsv bsdtar $SCER/$nom/sac/usr/bin/tar
}
