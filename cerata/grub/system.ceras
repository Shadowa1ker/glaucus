prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  CFLAGS="$CFLAGSNOLTONOOPENMPNOPLT" \
  LDFLAGS="$LDFLAGSNOOPENMP" \
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --disable-nls \
    --disable-efiemu \
    --disable-werror &&

  $SCRD/patch 0 $nom glaucus 0001-Lower-test-timeout.patch
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
