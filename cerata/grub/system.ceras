prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/patch 1 $nom clear 0001-Lower-test-timeout
}

configure_system() {
  autoreconf -vfi &&

  CFLAGS="$(grep -q atlanticus $SCRD/species && printf -- "$CFLAGSNOLTONOOPENMPNOPLT" || printf -- "$CFLAGSLTO")" \
  LDFLAGS="$(grep -q atlanticus $SCRD/species && printf -- "$LDFLAGSNOOPENMP" || printf -- "$LDFLAGS")" \
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --disable-nls \
    --disable-efiemu \
    --disable-werror
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
