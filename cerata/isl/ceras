name=isl
version=git
release=1
arch=x86-64
url=https://repo.or.cz/$name
description='A library for manipulating sets and relations of integer points bounded by linear constraints'
license=MIT
build_cross(){
        rsync -vah $CERD/$name/$name $CSRC --delete
        cd $CSRC/$name
        ./autogen.sh
        LDFLAGS="-Wl,-rpath=$CRSL/lib" \
        ./configure \
                --prefix=$CRSL \
                --disable-static \
                --with-gmp=$CRSL
        make
        make install
}
build_toolchain(){
        rsync -vah $CERD/$name/$name $TSRC --delete
        cd $TSRC/$name
        ./autogen.sh
        AR=$TUPL-ar \
        AS=$TUPL-as \
        CC=$TUPL-gcc \
        CXX=$TUPL-g++ \
        LD=$TUPL-ld \
        NM=$TUPL-nm \
        OBJCOPY=$TUPL-objcopy \
        OBJDUMP=$TUPL-objdump \
        RANLIB=$TUPL-ranlib \
        READELF=$TUPL-readelf \
        SIZE=$TUPL-size \
        STRINGS=$TUPL-strings \
        STRIP=$TUPL-strip \
        ./configure \
                --prefix=$TOOL \
                --disable-shared \
                --with-gmp=$TOOL
        make
        make install
}
build(){
        :
}
