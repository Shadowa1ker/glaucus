name=isl
version=git
release=1
arch=x86-64
url=https://repo.or.cz/$name
description='A library for manipulating sets and relations of integer points bounded by linear constraints'
license=MIT
build_toolchain(){
        rsync -vah $CERD/$name/$name $TSRC --delete
        cd $TSRC/$name
        ./autogen.sh
        AR=$TUPL-gcc-ar \
        AS=$TUPL-as \
        CC=$TUPL-gcc \
        LD=$TUPL-ld \
        NM=$TUPL-gcc-nm \
        OBJDUMP=$TUPL-objdump \
        RANLIB=$TUPL-gcc-ranlib \
        READELF=$TUPL-readelf \
        STRIP=$TUPL-strip \
        ./configure \
                --prefix=$TOOL \
                --disable-shared \
                --with-gmp=$TOOL
        make
        make install
}
build(){
        :
}
