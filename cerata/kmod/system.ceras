prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/patch 1 $nom arch 0002-add-zstd-compressed-module-support &&
  $SCRD/patch $nom void strndupa
}

configure_system() {
  autoreconf -vfis &&

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --disable-manpages \
    --with-xz \
    --with-zlib \
    --with-zstd \
    --with-openssl \
    --without-bashcompletiondir
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip &&

  for i in depmod insmod lsmod modinfo modprobe rmmod; do
    ln -fsv $nom $SCER/$nom/sac/usr/bin/$i
  done
}
