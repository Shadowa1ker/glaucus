name=pixman
version=git
release=1
arch=x86-64
url=https://anon$version.freedesktop.org/$version/$name
cysts='musl zlib libpng'
description='A low-level software library for pixel manipulation, providing features such as image compositing and trapezoid rasterization'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        PNG_CFLAGS=-I$GLAD/usr/include/libpng16 \
        PNG_LIBS="-L$GLAD/usr/lib -lpng16 -lz" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-loongson-mmi \
                --disable-arm-simd \
                --disable-arm-neon \
                --disable-arm-iwmmxt \
                --disable-arm-iwmmxt2 \
                --disable-mips-dspr2 \
                --disable-gtk \
                --enable-libpng \
                --with-sysroot=$GLAD
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
