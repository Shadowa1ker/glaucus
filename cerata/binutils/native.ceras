prepare() {
  $MKDIR $NBLD/$nom &&
  cd $NBLD/$nom
}

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$TUPL \
    --target=$TUPL \
    --prefix=$TOOL \
    --enable-deterministic-archives \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --enable-default-hash-style=gnu \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --disable-initfini-array \
    --with-lib-path=$TOOL/lib \
    --with-sysroot \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-included-gettext \
    --with-system-zlib \
    --disable-multilib
}

build() {
  $MAKE \
    configure-host &&

  $MAKE
}

install() {
  $MAKE \
    install-strip &&

  $MAKE \
    -C ld clean &&

  $MAKE \
    LIB_PATH=/usr/lib \
    -C ld &&

  $RSYNC ld/ld-new $TOOL/bin &&

  $LN ld.bfd $TOOL/bin/ld
}
