prepare_native() {
  rsync -vah $CERD/$name/$name-gdb/ $TSRC/$name --delete --exclude=.$version

  install -dv $NBLD/$name
  cd $NBLD/$name
}

configure_native() {
  $TSRC/$name/configure \
    --prefix=$TOOL \
    --host=$TUPL \
    --target=$TUPL \
    --enable-deterministic-archives \
    --disable-compressed-debug-sections \
    --disable-werror \
    --disable-nls \
    --with-lib-path=$TOOL/lib \
    --with-sysroot \
    --disable-multilib \
    --disable-gdb
}

build_native() {
  make
}

install_native() {
  make \
    install

  make \
    -C ld clean

  make \
    LIB_PATH=/usr/lib \
    -C ld

  cp -av ld/ld-new $TOOL/bin
}
