prepare_cross() {
  rsync -vah $CERD/$nom/$nom-$ver/ $TSRC/$nom --delete
  
  install -dv $XBLD/$nom
  cd $XBLD/$nom
}

configure_cross() {
  $TSRC/$nom/configure \
    --prefix=$TOOL \
    --target=$TUPL \
    --enable-deterministic-archives \
    --disable-compressed-debug-sections \
    --disable-werror \
    --disable-nls \
    --with-lib-path=$TOOL/lib \
    --with-sysroot=$GLAD \
    --disable-multilib
}

build_cross() {
  make
}

install_cross() {
  make \
    install-strip
}
