prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $TSRC/$nom --delete &&
  cd $TSRC/$nom &&

  $SCRD/gnu guess . &&
  $SCRD/gnu rpath . &&
  $SCRD/gnu sub . &&

  $MKDIR $TBLD/$nom &&
  cd $TBLD/$nom
} &&

configure() {
  $TSRC/$nom/configure \
    --build=$XBLD \
    --host=$XBLD \
    --target=$XTGT \
    --prefix=$TLCD \
    --libdir=$TLCD/lib \
    --enable-deterministic-archives \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-separate-code \
    --enable-default-hash-style=gnu \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --disable-initfini-array \
    --with-sysroot=$TLCD/sysroot \
    --with-pkgversion="glaucus $ARCH" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-included-gettext \
    --with-system-zlib \
    --disable-multilib &&

  $MAKE \
    configure-host
} &&

build() {
  $MAKE \
    all-binutils \
    all-gas \
    all-ld
} &&

install() {
  $MAKE \
    install-strip-binutils \
    install-strip-gas \
    install-strip-ld &&

  $LN $TUPL-ld.bfd $TLCD/bin/$TUPL-ld &&

  $LN ../../bin/$TUPL-ar $TLCD/sysroot/bin/ar &&
  $LN ../../bin/$TUPL-as $TLCD/sysroot/bin/as &&
  $LN ../../bin/$TUPL-ld $TLCD/sysroot/bin/ld &&
  $LN ../../bin/$TUPL-ld.bfd $TLCD/sysroot/bin/ld.bfd &&
  $LN ../../bin/$TUPL-nm $TLCD/sysroot/bin/nm &&
  $LN ../../bin/$TUPL-objcopy $TLCD/sysroot/bin/objcopy &&
  $LN ../../bin/$TUPL-objdump $TLCD/sysroot/bin/objdump &&
  $LN ../../bin/$TUPL-ranlib $TLCD/sysroot/bin/ranlib &&
  $LN ../../bin/$TUPL-readelf $TLCD/sysroot/bin/readelf &&
  $LN ../../bin/$TUPL-strip $TLCD/sysroot/bin/strip
}
