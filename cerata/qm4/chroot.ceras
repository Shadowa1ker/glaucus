prepare_chroot() {
  $RSYNC $SRCD/$nom/m4-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom
}

configure_chroot() {
  $SCRD/patch $nom glaucus 0001-fix-name
}

build_chroot() {
  make
}

install_chroot() {
  make \
    PREFIX=$TOOL \
    install &&

  $LN $nom $TOOL/bin/m4
}
