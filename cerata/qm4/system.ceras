prepare() {
  $RSYNC $SRCD/$nom/m4-2/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
} &&

configure() {
  $SCRD/patch 0 $nom glaucus 0001-fix-name
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    PREFIX=/usr \
    install &&

  $LN $nom $SCER/$nom/sac/usr/bin/m4
}
