prepare_system() {
  $RSYNC $SRCD/$nom/m4-2/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  $SCRD/patch $nom glaucus 0001-fix-name
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    PREFIX=/usr \
    install &&

  $LN $nom $SCER/$nom/sac/usr/bin/m4
}
