name=s6
version=git
release=1
description=''
arch=x86_64
url=git://git.skarnet.org/$name
license=ISC

build () {
	cp -arv $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	AR=$AR CC=$CC RANLIB=$RANLIB STRIP=$STRIP LDFLAGS="$LDFLAGS" ./configure \
		--prefix=/ \
		--libexecdir=/lib/libexec \
		--with-sysdeps=$GLAD/lib/skalibs/sysdeps \
		--with-include=$GLAD/include \
		--with-dynlib=$GLAD/lib \
		--enable-shared \
		--disable-static \
		--disable-allstatic
	sed -e "/CFLAGS :=/ cCFLAGS := $CFLAGS -fno-stack-protector" \
		-i config.mak
	make
	make DESTDIR=$GLAD install
}
