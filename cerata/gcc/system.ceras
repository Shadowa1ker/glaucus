prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&

  cd $SSRC/$nom &&
  
  $SCRD/patch $nom glaucus 0002-adjust-system-paths &&

  install -dv $SBLD/$nom
}

configure_system() {
  autoreconf -vfis &&

  cd $SBLD/$nom &&

  CFLAGS="$CFLAGSNOLTO" \
  CXXFLAGS="$($SCRD/classify bennettae "$CFLAGSNOLTO" "$CFLAGSNOIPANOLTO")" \
  $SSRC/$nom/configure \
    --prefix=/usr \
    --libexecdir=/usr/lib \
    --disable-multilib \
    --disable-bootstrap \
    --enable-languages=c,c++ \
    --disable-libsanitizer \
    --disable-nls \
    --with-system-zlib
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip &&

  for i in 89 99; do
    $RSYNC $CERD/$nom/c$i $SCER/$nom/sac/usr/bin
  done &&
  
  ln -fsv $nom $SCER/$nom/sac/usr/bin/cc &&
  
  install -dv $SCER/$nom/sac/usr/lib/bfd-plugins &&

  ln -fsv ../../libexec/$nom/$TUPL/$ver/liblto_plugin.so \
    $SCER/$nom/sac/usr/lib/bfd-plugins/ &&
  
  ln -fsv ../bin/cpp $SCER/$nom/sac/usr/lib/cpp &&

  install -dv $SCER/$nom/sac/usr/share/gdb/auto-load/usr/lib &&

  mv $SCER/$nom/sac/usr/lib/*gdb.py $SCER/$nom/sac/usr/share/gdb/auto-load/usr/lib
}
