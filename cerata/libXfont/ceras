name=libXfont
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libxfont
cyst=musl
description='X font handling library for server & utilities'
license=MIT
build(){
        rsync -vah $CERD/$name/libxfont/ $SSRC/$name --delete
        cd $SSRC/$name
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-devel-docs \
                --disable-ipv6 \
                --without-xmlto \
                --without-fop
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
