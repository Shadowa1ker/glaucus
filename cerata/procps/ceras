name=procps
version=git
release=1
arch=x86_64
url=https://gitlab.com/$name-ng/$name
cysts='musl netbsd-curses'
description='Command line and full screen utilities for browsing procfs'
cluster=core
license='GPLv2+ GPLv3+ LGPLv2.1+'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        LDFLAGS="$LDFLAGS -L$GLAD/usr/lib -lncursesw -lterminfo" \
        $SSRC/$name/configure \
                --prefix=/usr \
                --sbindir=/usr/bin \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-nls
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
