name=s6-portable-utils
version=git
release=1
arch=x86_64
url=https://$version.skarnet.org/cgi-bin/c$version.cgi/$name
description="skarnet's set of tiny general Unix utilities optimized for simplicity and small size"
license=ISC
build(){
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/ \
                --libexecdir=/lib/libexec \
                --with-sysdeps=$GLAD/lib/skalibs/sysdeps \
                --with-include=$GLAD/include \
                --with-dynlib=$GLAD/lib \
                --enable-shared \
                --disable-static \
                --disable-allstatic
        sed -e "s/CFLAGS := .*/CFLAGS := $CFLAGS -fno-stack-protector/" \
                -e 's/-Wl,--hash-style=both //' \
                -i config.mak
        make
        make \
                install
}
