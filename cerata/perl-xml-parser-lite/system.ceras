prepare_system() {
  $RSYNC $SRCD/$nom/XML-Parser-Lite-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  perl Makefile.PL
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
