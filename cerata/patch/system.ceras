prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/patch 1 $nom upstream 0001-Avoid-set_file_attributes-sign-conversion-warnings.patch &&
  $SCRD/patch 1 $nom upstream 0002-Test-suite-compatibility-fixes.patch &&
  $SCRD/patch 1 $nom upstream 0003-Test-suite-fix-Korn-shell-incompatibility.patch &&
  $SCRD/patch 1 $nom upstream 0004-Fix-segfault-with-mangled-rename-patch.patch &&
  $SCRD/patch 1 $nom upstream 0005-Allow-input-files-to-be-missing-for-ed-style-patches.patch &&
  $SCRD/patch 1 $nom upstream 0006-Fix-arbitrary-command-execution-in-ed-style-patches-.patch &&
  $SCRD/patch 1 $nom upstream 0007-Invoke-ed-directly-instead-of-using-the-shell.patch &&
  $SCRD/patch 1 $nom upstream 0011-Fix-check-of-return-value-of-fwrite.patch &&
  $SCRD/patch 1 $nom upstream 0012-Fix-ed-style-test-failure.patch &&
  
  $SCRD/patch 1 $nom gentoo patch-2.7.6-CVE-2018-1000156-fix1.patch &&
  
  $SCRD/patch 1 $nom upstream 0015-Don-t-leak-temporary-file-on-failed-multi-file-ed-st.patch &&
  $SCRD/patch 1 $nom upstream 0016-Make-the-debug-2-output-more-useful.patch &&
  $SCRD/patch 1 $nom upstream 0017-Fix-swapping-fake-lines-in-pch_swap.patch &&
  $SCRD/patch 1 $nom upstream 0018-Improve-support-for-memory-leak-detection.patch &&
  $SCRD/patch 1 $nom upstream 0019-Skip-ed-test-when-the-ed-utility-is-not-installed.patch &&
  $SCRD/patch 1 $nom upstream 0020-Abort-when-cleaning-up-fails.patch &&
  $SCRD/patch 1 $nom upstream 0021-Don-t-crash-when-RLIMIT_NOFILE-is-set-to-RLIM_INFINI.patch &&
  $SCRD/patch 1 $nom upstream 0022-Don-t-follow-symlinks-unless-follow-symlinks-is-give.patch &&
  $SCRD/patch 1 $nom upstream 0023-Avoid-invalid-memory-access-in-context-format-diffs.patch &&
  $SCRD/patch 1 $nom upstream 0024-Fix-failed-assertion-outstate-after_newline.patch &&
  $SCRD/patch 1 $nom upstream 0025-Add-missing-section-tests-to-context-format-test-cas.patch
}

configure_system() {
  ./configure \
    --prefix=/usr
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
