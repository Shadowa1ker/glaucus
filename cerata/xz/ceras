name=xz
version=git
release=1
arch=x86_64
url=https://$version.tukaani.org/$name.$version
cyst=musl
description='A free general-purpose data compression software with a high compression ratio'
license='GPLv2+ GPLv3+ LGPLv2.1+ PD'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        autoreconf -vfi
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix= \
                --build=$TRPL \
                --host=$TRPL \
                --target=$TRPL \
                --disable-doc \
                --disable-static \
                --disable-nls \
                --disable-rpath \
                --disable-werror
        make
        make \
                DESTDIR=$SCER/$name/sac \
                install-strip
}
