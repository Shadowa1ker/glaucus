name=xz
version=git
release=1
description='A free general-purpose data compression software with a high compression ratio'
arch=x86_64
url=https://git.tukaani.org/$name.git
license='GPLv2+ GPLv3+ LGPLv2.1+ PD'

build () {
	cp -arv $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	autoreconf -vfi
	mkdir -v $TMPD/system/builds/$name
	cd $TMPD/system/builds/$name
	AR=$AR AS=$AS AWK=$GLAD/bin/mawk CC=$CC OBJDUMP=$OBJDUMP RANLIB=$RANLIB STRIP=$STRIP CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" $TMPD/system/sources/$name/configure \
		--prefix= \
		--disable-static \
		--disable-nls
	make
	make DESTDIR=$GLAD install
}
