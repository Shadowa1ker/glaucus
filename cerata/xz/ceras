name=xz
version=git
release=1
arch=x86_64
url=https://$version.tukaani.org/$name.$version
description='A free general-purpose data compression software with a high compression ratio'
license='GPLv2+ GPLv3+ LGPLv2.1+ PD'
build(){
        rsync -vah $CERD/$name/$name/ $SSRC/$name/ --delete
        cd $SSRC/$name
        autoreconf -vfi
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix= \
                --disable-static \
                --disable-nls
        make
        make \
                install-strip
        make \
                DESTDIR=$SCER/$name/sac \
                install-strip
}
