name=xz
version=git
release=1
arch=x86-64
url=https://$version.tukaani.org/$name.$version
cysts='musl mawk'
description='A free general-purpose data compression software with a high compression ratio'
license='GPLv2+ GPLv3+ LGPLv2.1+ PD'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        autoreconf -vfi
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-doc \
                --disable-static \
                --disable-nls \
                --disable-rpath \
                --disable-werror
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
