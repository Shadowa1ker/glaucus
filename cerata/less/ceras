name=less
version=547
release=1
arch=x86_64
url=http://www.greenwoodsoftware.com/$name/$name-$version.tar.gz
description='A free, open-source and text-based terminal file pager'
license='BSDv2 GPLv3'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        CFLAGS="$CFLAGS -I$GLAD/include" \
        LDFLAGS="$LDFLAGS -L$GLAD/lib" \
        ./configure \
                --prefix= \
                --with-regex=pcre2
        make
        make \
                DESTDIR=$DESTDIR \
                install-strip
}
