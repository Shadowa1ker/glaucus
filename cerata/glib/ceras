name=glib
version=git
release=1
arch=x86-64
url=https://gitlab.gnome.org/GNOME/$name
cysts='musl mawk libelf-compat zlib-ng pcre'
description='The low-level core library that forms the basis for projects such
as GTK+ and GNOME'
license=LGPLv2.1+

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
  
  mkdir -v $SBLD/$name
}

configure_system() {
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  LDFLAGS="$LDFLAGS -L$GLAD/usr/lib" \
  LD_LIBRARY_PATH=$GLAD/usr/lib \
  meson \
    --prefix=/usr \
    -Dlibmount=false \
    $SBLD/$name
}

build_system() {
  LD_LIBRARY_PATH=$GLAD/usr/lib \
  ninja \
    -C $SBLD/$name
}

install_system() {
  DESTDIR=$SCER/$name/sac \
  ninja \
    -C $SBLD/$name \
    install
}
