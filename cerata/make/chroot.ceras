prepare_chroot() {
  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
}

configure_chroot() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$TUPL \
    --prefix=$TOOL \
    --disable-nls \
    --without-guile
}

build_chroot() {
  $nom
}

install_chroot() {
  $nom \
    install-strip
}
