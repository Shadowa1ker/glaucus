prepare_system() {
  $MKDIR $SBLD/$nom &&
  cd $SBLD/$nom
}

configure_system() {
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=/usr \
    --disable-nls
}

build_system() {
  $nom
}

install_system() {
  $nom \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
