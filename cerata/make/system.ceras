prepare() {
  $MKDIR $SBLD/$nom &&
  cd $SBLD/$nom
}

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    --prefix=/usr \
    --disable-nls \
    --disable-rpath \
    --without-guile
}

build() {
  $nom
}

install() {
  $nom \
    DESTDIR=$SCER/$nom/sac \
    install-strip &&

  $LN $nom $SCER/$nom/sac/usr/bin/g$nom
}
