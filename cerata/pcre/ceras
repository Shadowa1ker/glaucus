nom=pcre
ver=svn
url=$ver://vcs.exim.org/$nom/code/trunk
lic=BSDv3
build(){
        rsync -vah $CERD/$nom/trunk/ $SSRC/$nom --delete
        cd $SSRC/$nom
        ./autogen.sh
        ./configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --enable-jit
        make
        make DESTDIR=$SCER/$nom/sac \
                install-strip
}
