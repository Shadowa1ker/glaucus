nom=pcre
ver=8.44
url=https://ftp.$nom.org/pub/$nom/$nom-$ver.tar.bz2
lic=BSDv3
build(){
        $RSYNC $CERD/$nom/trunk/ $SSRC/$nom --delete
        cd $SSRC/$nom
        ./autogen.sh
        ./configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --enable-jit
        make
        make DESTDIR=$SCER/$nom/sac \
                install-strip
}
