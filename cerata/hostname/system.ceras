prepare_system() {
  $RSYNC $SRCD/$nom/$nom/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure_system() {
  $SCRD/patch $nom glaucus remove-O2
}

build_system() {
  make
}

install_system() {
  make \
    BINDIR=/usr/bin \
    BASEDIR=$SCER/$nom/sac \
    install
}
