prepare() {
  $RSYNC $SRCD/$nom $SSRC --delete &&
  cd $SSRC/$nom
}

configure() {
  :
}

build() {
  make
}

install() {
  $MKDIR $SCER/$nom/sac/usr/bin $SCER/$nom/sac/usr/lib &&

  $RSYNC build/brssl $SCER/$nom/sac/usr/bin &&
  $RSYNC build/lib$nom.so $SCER/$nom/sac/usr/lib
}
