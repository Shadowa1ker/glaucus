prepare_chroot() {
  rsync -vah $CERD/$name/BearSSL/ $CSRC/$name --delete --exclude=.$version
  cd $CSRC/$name
}

configure_chroot() {
  :
}

build_chroot() {
  make
}

install_chroot() {
  install -v build/brssl $TOOL/bin
  install -Dv build/libbearssl.a build/libbearssl.so -t $TOOL/lib
}
