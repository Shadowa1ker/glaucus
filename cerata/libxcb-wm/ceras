name=libxcb-wm
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/$name
cysts='musl util-macros'
description='XCB client and window-manager helpers for ICCCM & EWMH'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        $version submodule update --init
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-devel-docs \
                --without-doxygen
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
