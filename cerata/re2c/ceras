name=re2c
version=git
release=1
arch=x86-64
url=https://github.com/skvadrik/$name
cyst='musl mawk'
description='Free and open-source lexer generator for C and C++'
licenses='GPLv3 PD PHPv3.01'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh
        sed -e 's/-O2//' \
                -i configure
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        $SSRC/$name/configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
