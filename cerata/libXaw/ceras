name=libXaw
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libxaw
cyst=musl
description='X Athena Widget Set, based on the X Toolkit Intrinsics (Xt) Library'
license=MIT
build(){
        rsync -vah $CERD/$name/libxaw/ $SSRC/$name --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-specs \
                --disable-xaw6 \
                --disable-xaw7 \
                --without-xmlto \
                --without-fop \
                --without-xsltproc
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
