name=libXrender
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libxrender
cyst=musl
description='Xlib library for the Render Extension to the X11 protocol'
license=MIT
build(){
        rsync -vah $CERD/$name/libxrender/ $SSRC/$name --delete
        cd $SSRC/$name
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
