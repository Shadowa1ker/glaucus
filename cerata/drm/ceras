name=drm
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/mesa/$name
cyst=musl
description='libdrm Direct Rendering Manager library and headers'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
