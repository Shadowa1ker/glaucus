name=xorgproto
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/proto/$name
cysts='musl util-macros'
description='X Window System unified protocol definitions'
license='BSDv2 HPND ICU MIT SGI-Bv2.0 X11'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-specs \
                --without-xmlto \
                --without-fop \
                --without-xsltproc
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
