name=libXxf86vm
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libxxf86vm
cysts='musl util-macros'
description='Xlib-based library for the XFree86-VidMode X extension'
license=MIT
build(){
        rsync -vah $CERD/$name/libxxf86vm/ $SSRC/$name --delete
        cd $SSRC/$name
        ACLOCAL_PATH=$GLAD/usr/share/aclocal \
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
