name=pkgconf
version=git
release=1
arch=x86_64
url=https://github.com/$name/$name
cyst=musl
description='A package compiler and linker metadata toolkit'
license=ISC
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh
        ./configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --with-sysroot=$GLAD
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
