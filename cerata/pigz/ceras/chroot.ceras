prepare_chroot() {
  rsync -vah $CERD/$name/$name-$version/ $CSRC/$name --delete
  cd $CSRC/$name
}

configure_chroot() {
  sed -e "s/CFLAGS=.*/CFLAGS=$CFLAGS/" \
    -e "s/LDFLAGS=/LDFLAGS=$LDFLAGS/" \
    -i Makefile
}

build_chroot() {
  make
}

install_chroot() {
  install -v pigz $TOOL/bin

  ln -fsv pigz $TOOL/bin/unpigz
  
  ln -fsv pigz $TOOL/bin/gzip
  ln -fsv pigz $TOOL/bin/gunzip
  ln -fsv pigz $TOOL/bin/gzcat
  ln -fsv pigz $TOOL/bin/zcat
}
