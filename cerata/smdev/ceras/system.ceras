prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  rsync -vah $CERD/$nom/config.h $SSRC/$nom --delete
  cd $SSRC/$nom

  sed -e '/types/a #include <sys/sysmacros.h>' \
    -i smdev.c

  patch -p1 -i $CERD/$nom/patches/$nom.patch
}

configure_system() {
  sed -e 's/PREFIX = .*/PREFIX = \/usr/' \
    -e "s/CFLAGS   = .*/CFLAGS = $CFLAGSNOLTO -std=c99 -Wall -pedantic -D_BSD_SOURCE -D_GNU_SOURCE/" \
    -e "s/LDFLAGS  = .*/LDFLAGS = $LDFLAGS/" \
    -i config.mk
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install

  cd $CERD/$nom

  install -dv $SCER/$nom/sac/etc/$nom/add
  install -dv $SCER/$nom/sac/etc/$nom/remove
  
  install -m 644 00-modprobe 01-uuid 10-cdrom 20-pci 20-platform \
    $SCER/$nom/sac/etc/$nom/add
  install -m 644 99-remove_links $SCER/$nom/sac/etc/$nom/remove
  install -m 744 proceeddev $SCER/$nom/sac/etc/$nom
}
