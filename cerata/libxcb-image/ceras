name=libxcb-image
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/$name
cysts='musl util-macros'
description="XCB port of Xlib's XImage and XShmImage functions"
license=MIT

prepare_system() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name

  $version submodule update --init
}

configure_system() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static \
    --disable-devel-docs \
    --with-sysroot=$GLAD \
    --without-doxygen
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
