name=libxshmfence
version=git
release=1
arch=x86-64
url=https://gitlab.freedesktop.org/xorg/lib/$name
cysts='musl util-macros'
description="Shared memory 'SyncFence' synchronization primitive"
license=MIT

prepare() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static \
    --disable-futex \
    --disable-visibility
}

build() {
  make
}

install() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
