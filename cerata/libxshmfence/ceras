name=libxshmfence
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/$name
cyst=musl
description="Shared memory 'SyncFence' synchronization primitive"
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-futex \
                --disable-visibility
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
