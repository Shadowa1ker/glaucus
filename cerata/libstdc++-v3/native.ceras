prepare() {
  $RSYNC $SRCD/gcc/gcc-$ver/ $TSRC/gcc --delete &&

  $MKDIR $NBLD/$nom &&
  cd $NBLD/$nom
}

configure() {
  $TSRC/gcc/$nom/configure \
    --host=$TUPL \
    --target=$TUPL \
    --prefix=$TOOL \
    --disable-multilib \
    --disable-nls \
    --disable-rpath \
    --disable-libstdcxx-pch \
    --disable-symvers \
    --disable-libstdcxx-threads \
    --with-gxx-include-dir=$TOOL/$TUPL/include/c++/$ver
}

build() {
  make
}

install() {
  make \
    install-strip
}
