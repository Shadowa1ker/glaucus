prepare_system() {
  rsync -vah $CERD/$name/$name-$version/ $SSRC/$name --delete
  cd $SSRC/$name
}

configure_system() {
  patch -p1 -i $CERD/$name/patches/$name.patch
}

build_system() {
  make
}

install_system() {
  make \
    RAISE_SETFCAP=no \
    PREFIX=/usr \
    SBINDIR=/usr/sbin \
    DESTDIR=$SCER/$name/sac \
    install
}
