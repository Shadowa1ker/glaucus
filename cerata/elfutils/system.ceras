prepare_system() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $RSYNC $CERD/$nom/error.h lib &&
  $RSYNC $CERD/$nom/error.h src &&

  $SCRD/patch 0 $nom void fix-aarch64_fregs.patch &&
  $SCRD/patch 0 $nom void fix-uninitialized.patch &&
  $SCRD/patch 0 $nom void musl-cdefs.patch &&
  $SCRD/patch 0 $nom void musl-fts-obstack.patch &&
  
  $SCRD/patch 0 $nom glaucus musl-fts-obstack-0.178.patch &&
  
  $SCRD/patch 0 $nom void musl-macros.patch &&
  $SCRD/patch 0 $nom void musl-qsort_r.patch &&
  $SCRD/patch 0 $nom void musl-strerror_r.patch &&
  $SCRD/patch 0 $nom void musl-strndupa.patch
}

configure_system() {
  autoreconf -vfi &&

  CFLAGS="$CFLAGS -Wno-error" \
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-deterministic-archives \
    --disable-symbol-versioning \
    --disable-nls \
    --disable-debuginfod
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
