name=fribidi
version=git
release=1
arch=x86-64
url=https://github.com/$name/$name
cyst=musl
description='The Free Implementation of the Unicode Bidirectional Algorithm'
licenses='GPLv2+ GPLv3+ LGPLv2.1+ MIT'

prepare() {
  rsync -vah $CERD/$name/$name $SSRC --delete
  cd $SSRC/$name
}

configure() {
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-deprecated
}

build() {
  make
}

install() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
