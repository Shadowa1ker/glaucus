nom=fribidi
ver=git
url=https://github.com/$nom/$nom
lic='GPLv2+ GPLv3+ LGPLv2.1+ MIT'

prepare_system() {
  rsync -vah $CERD/$nom/$nom $SSRC --delete
  cd $SSRC/$nom
}

configure_system() {
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-deprecated
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
