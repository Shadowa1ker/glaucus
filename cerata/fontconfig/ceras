name=fontconfig
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/$name/$name
cysts='musl freetype'
description='Font configuration and customization library'
license='GPLv3+ HPND MIT'
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-nls \
                --disable-docs
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
