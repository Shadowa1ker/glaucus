name=libXdmcp
version=git
release=1
arch=x86_64
url=https://gitlab.freedesktop.org/xorg/lib/libxdmcp
cysts='musl util-macros xorgproto'
description='X Display Manager Control Protocol library'
license=MIT
build(){
        rsync -vah $CERD/$name/libxdmcp/ $SSRC/$name --delete
        cd $SSRC/$name
        CFLAGS="$CFLAGS -I$GLAD/usr/include" \
        ./autogen.sh \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --disable-docs \
                --disable-unit-tests \
                --without-xmlto \
                --without-fop \
                --without-xsltproc
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
