nom=libXdmcp
ver=git
url=https://gitlab.freedesktop.org/xorg/lib/libxdmcp
lic=MIT

prepare_system() {
  rsync -vah $CERD/$nom/libxdmcp/ $SSRC/$nom --delete
  cd $SSRC/$nom
}

configure_system() {
  ACLOCAL_PATH=$GLAD/usr/share/aclocal \
  CFLAGS="$CFLAGS -I$GLAD/usr/include" \
  ./autogen.sh \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static \
    --disable-docs \
    --disable-unit-tests \
    --without-xmlto \
    --without-fop \
    --without-xsltproc
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
