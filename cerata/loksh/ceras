name=loksh
version=git
release=1
arch=x86_64
url=https://github.com/dimkr/$name.$version
cysts='musl netbsd-curses'
description='A port of the OpenBSD ksh to Linux'
license=PD
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        sed -e "s/CC ?= cc/CC = $CC/" \
                -e "s/CFLAGS ?= -O2/CFLAGS = $CFLAGS -I\/home\/glaucus\/system\/include/" \
                -e "s/LDFLAGS ?=/LDFLAGS = $LDFLAGS -L\/home\/glaucus\/system\/lib/" \
                -e 's/DESTDIR ?= \//DESTDIR = \/home\/glaucus\/system/' \
                -e 's/PREFIX ?= \/usr/PREFIX =/' \
                -e 's/BIN_NAME ?= ksh/BIN_NAME = loksh/' \
                -e 's/?//' \
                -e '28s/$/-lterminfo/' \
                -i Makefile
        make
        make \
                DESTDIR=$SCER/$name/sac \
                install
        cd $SCER/$name/sac/bin
        ln -fsv $name ksh
}
