name=loksh
version=git
release=1
description='A port of the OpenBSD ksh to Linux'
arch=x86_64
url=https://github.com/dimkr/$name
license=PD

build () {
	cp -rav $CERD/$name/$name $TMPD/system/sources
	cd $TMPD/system/sources/$name
	CC="$CC" CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" make
	PREFIX=$GLAD make install
}
