Subject: [PATCH 10/48] msgmerge: pretty the output with breaklines

---
 src/msgmerge.c | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/src/msgmerge.c b/src/msgmerge.c
index 39e3b88..26499c2 100644
--- a/src/msgmerge.c
+++ b/src/msgmerge.c
@@ -63,6 +63,7 @@ int process_line_callback(po_message_t msg, void* user) {
 			if (msg->strlen[i] > file->len)
 				file->len = msg->strlen[i] + 1;
 
+		file->len += 1;
 		break;
 	case ps_parse:
 		if (msg->ctxt_len) {
@@ -88,6 +89,7 @@ int process_line_callback(po_message_t msg, void* user) {
 			fprintf(file->out, "msgstr \"%s\"\n", file->buf);
 		}
 
+		fputc('\n', file->out);
 		break;
 	}
 	return 0;
