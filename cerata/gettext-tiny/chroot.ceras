prepare_chroot() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom
}

configure_chroot() {
  printf "prefix=$TOOL
LIBINTL=MUSL
AR=$AR
RANLIB=$RANLIB
CFLAGS=$CFLAGS
LDFLAGS=$LDFLAGS\n" > config.mak
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
