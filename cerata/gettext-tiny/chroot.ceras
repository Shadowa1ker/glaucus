prepare_chroot() {
  rsync -vah $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete
  cd $CSRC/$nom
}

configure_chroot() {
  printf 'prefix=$TOOL
LIBINTL=MUSL
AR=$AR
RANLIB=$RANLIB
CFLAGS=$CFLAGS
LDFLAGS=$LDFLAGS' > config.mak
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
