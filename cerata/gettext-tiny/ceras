name=gettext-tiny
version=git
release=1
arch=x86-64
url=https://github.com/sabotage-linux/$name
cyst=musl
description='Lightweight replacements for tools typically used from the GNU gettext suite'
license=MIT
build(){
        rsync -vah $CERD/$name/$name $SSRC --delete
        cd $SSRC/$name
        cat > config.mak << EOF
prefix=/usr
LIBINTL=MUSL
AR=$AR
CC=$CC
RANLIB=$RANLIB
CFLAGS=$CFLAGS
LDFLAGS=$LDFLAGS
EOF
        make
        make DESTDIR=$SCER/$name/sac \
                install
}
