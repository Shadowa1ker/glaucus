prepare_chroot() {
  rsync -vah $CERD/$name/$name $CSRC --delete
  cd $CSRC/$name
}

configure_chroot() {
  cat > config.mak << EOF
prefix=$TOOL
LIBINTL=MUSL
AR=$AR
RANLIB=$RANLIB
CFLAGS=$CFLAGS
LDFLAGS=$LDFLAGS
EOF
}

build_chroot() {
  make
}

install_chroot() {
  make \
    install
}
