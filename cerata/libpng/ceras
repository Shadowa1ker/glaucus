name=libpng
version=git
release=1
arch=x86_64
url=https://github.com/glennrp/$name
cysts='musl zlib'
description='The official PNG reference library'
license='Apachev2.0 BSDv2 GPLv2+ libpngv2 MIT zlib'
build(){
        mkdir -v $SBLD/$name
        cd $SBLD/$name
        CPPFLAGS="-I$GLAD/usr/include" \
        $CERD/$name/$name/configure \
                --prefix=/usr \
                --build=$TUPL \
                --host=$TUPL \
                --target=$TUPL \
                --disable-static \
                --enable-hardware-optimizations \
                --enable-intel-sse
        make
        make DESTDIR=$SCER/$name/sac \
                install-strip
}
