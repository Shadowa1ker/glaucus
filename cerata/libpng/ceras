name=libpng
version=git
release=1
arch=x86-64
url=https://github.com/glennrp/$name
cysts='musl zlib-ng'
description='The official PNG reference library'
licenses='Apachev2.0 BSDv2 GPLv2+ libpngv2 MIT zlib'

prepare_system() {
  mkdir -v $SBLD/$name
  cd $SBLD/$name
}

configure_system() {
  $CERD/$name/$name/configure \
    --prefix=/usr \
    --build=$TUPL \
    --host=$TUPL \
    --target=$TUPL \
    --disable-static \
    --enable-hardware-optimizations \
    --enable-intel-sse \
    --with-zlib-prefix=$GLAD
}

build_system() {
  make
}

install_system() {
  make \
    DESTDIR=$SCER/$name/sac \
    install-strip
}
